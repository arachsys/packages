require go

check() {
  url https://github.com/filosottile/age/tags
  match version 1.3.0 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack age-1.3.0.tar.gz \
    https://github.com/filosottile/age/archive/refs/tags/v1.3.0.tar.gz
  go mod vendor
  tree 6e737f7f85a085fd9b6588f382169e8573307d1d2f530dfb901460dab60d9495
}

build() {
  go build -C cmd/age
  go build -C cmd/age-keygen
  install -t /dst/bin -D cmd/age/age cmd/age-keygen/age-keygen
}
