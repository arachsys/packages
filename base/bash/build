mode autotools

prepare() {
  unpack https://ftp.gnu.org/gnu/bash/bash-5.0.tar.gz
  set https://ftp.gnu.org/gnu/bash/bash-5.0-patches/bash50-{001..018}
  while [[ $# -gt 0 ]]; do
    apply -p 0 bash-5.0.${1##*-*(0)}.patch $1
    shift
  done
  apply paths.patch
  tree 610d405afd5c74cf271a9bdf487d7d59fdb6ea651989d6398b4ba2e99fcface5
}

config-extra --without-bash-malloc --with-installed-readline

post-install() {
  ln -f -s bash $DST/bin/sh
  rm -f $DST/bin/bashbug $DST/lib/bash/Makefile.inc
}
