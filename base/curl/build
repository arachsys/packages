prepare() {
  unpack https://curl.haxx.se/download/curl-7.74.0.tar.xz
  apply paths.patch
  tree e8c152d47eef21f07b3e42fde72f296d78d7a155353f5ace320e848c4181839e
}

mode autotools
config-extra --with-ca-bundle=/etc/ssl/cert.pem

pre-config() {
  unexpand $SRC/curl-config.in >$SRC/curl-config.in.tmp
  mv -f $SRC/curl-config.in{.tmp,}
  export PATH_SEPARATOR=:
}

post-install() {
  rm -f $DST/bin/curl-config
}
