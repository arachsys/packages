prepare() {
  unpack https://curl.haxx.se/download/curl-7.76.0.tar.xz
  apply paths.patch
  tree 461c824ae906026aed24d957754e083d93521aa580e7c450496eb4f8be9e0fc8
}

mode autotools
config-extra --with-ca-bundle=/etc/ssl/cert.pem

pre-config() {
  unexpand /src/curl-config.in >/src/curl-config.in.tmp
  mv -f /src/curl-config.in{.tmp,}
  export PATH_SEPARATOR=:
}

post-install() {
  rm -f /dst/bin/curl-config
}
