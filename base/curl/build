prepare() {
  unpack https://curl.haxx.se/download/curl-7.72.0.tar.xz
  apply paths.patch
  tree bb0c18578f51be449f0b9b57c9baaf8c40773a359a0c2e81da96bf82b2a0bd28
}

mode autotools
config-extra --with-ca-bundle=/etc/ssl/cert.pem

pre-config() {
  unexpand $SRC/curl-config.in >$SRC/curl-config.in.tmp
  mv -f $SRC/curl-config.in{.tmp,}
  export PATH_SEPARATOR=:
}

post-install() {
  rm -f $DST/bin/curl-config
}
