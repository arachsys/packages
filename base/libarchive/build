mode autotools

prepare() {
  unpack https://www.libarchive.org/downloads/libarchive-3.4.3.tar.xz
  tree 0e03765de4daac168cf320ab097f75e4460cef6726678da4493a51f83eb54da9
}

config-extra --disable-acl --enable-bsd{cat,cpio,tar}=dynamic \
  --enable-xattr --without-{expat,xml2} --with-{bz2lib,lzma,zlib,zstd}

post-install() {
  mv $DST/bin/{bsdcpio,cpio}
  mv $DST/bin/{bsdtar,tar}
}
