mode autotools

prepare() {
  unpack https://www.libarchive.org/downloads/libarchive-3.5.0.tar.xz
  tree 115b34da41f2bec2eb40217ca6aace8d433d5c7d40db56205231bdc4de484526
}

config-extra --disable-acl --enable-bsd{cat,cpio,tar}=dynamic \
  --enable-xattr --without-{expat,xml2} --with-{bz2lib,lzma,zlib,zstd}

post-install() {
  mv $DST/bin/{bsdcpio,cpio}
  mv $DST/bin/{bsdtar,tar}
}
