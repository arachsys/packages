prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.11.6.tar.xz
  tree 7fa4add4da83d066996860821d51b28ad92a2e42a646463b9cb9d3172557c2c0
}

build() {
  make headers HOSTCC=cc
  find usr/include -type f -name '*.h' -exec cp -t /dst --parents {} +
  find usr/include -type l -exec cp -d -t /dst --parents {} +
  mv /dst/usr /dst/lib
}
