prepare() {
  unpack https://github.com/facebook/zstd/releases/download/v1.4.9/zstd-1.4.9.tar.gz
  tree 01a4b47029954a6dbc109b4a04092e7d803fce22670de2b1f8e62363fc05e37e
}

build() {
  make install DESTDIR=$DST PREFIX= INCLUDEDIR=/lib/include \
    LIBDIR=/lib MAN1DIR=/lib/man/man1
  rm -f $DST/bin/zstd{grep,less} $DST/lib/man/man1/zstd{grep,less}.1
}
