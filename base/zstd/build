prepare() {
  unpack https://github.com/facebook/zstd/releases/download/v1.4.5/zstd-1.4.5.tar.gz
  tree 0afd2e1954b5734fb369bde9c360f0d2c02879d26b75898c4678594dddd88884
}

build() {
  make install DESTDIR=$DST PREFIX= INCLUDEDIR=/lib/include \
    LIBDIR=/lib MAN1DIR=/lib/man/man1
  rm -f $DST/bin/zstd{grep,less} $DST/lib/man/man1/zstd{grep,less}.1
}
