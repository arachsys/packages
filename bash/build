mode autotools

check() {
  url https://ftp.gnu.org/gnu/bash/
  match version 5.2.15 'bash-([0-9.]+)\.tar\.gz'
}

prepare() {
  unpack https://ftp.gnu.org/gnu/bash/bash-5.2.15.tar.gz
  apply config.diff
  apply paths.diff
  apply prompt.diff
  apply sync.diff
  tree 8711c6092b2a94fe6b289c3d20b4a06fdb998a4dd4cb54c995f4dd8c56854cee
}

config-extra --without-bash-malloc --with-installed-readline

post-install() {
  ln -f -s bash /dst/bin/sh
  rm -f /dst/bin/bashbug /dst/lib/bash/{*.h,Makefile.*}
}
