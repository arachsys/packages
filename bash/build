check() {
  url https://ftp.gnu.org.uk/gnu/bash/
  match version 5.3 'bash-([0-9.]+)\.tar\.gz'
}

prepare() {
  unpack https://ftp.gnu.org.uk/gnu/bash/bash-5.3.tar.gz
  apply config.diff
  apply paths.diff
  apply prompt.diff
  tree 9dafd754ec47eda3ee08f56112aef33efcc869281b38dbedb2f85f85eeed7e78
}

build() {
  auto-config --without-bash-malloc --with-installed-readline
  make install DESTDIR=/dst
  ln -f -s bash /dst/bin/sh
  rm -f /dst/bin/bashbug /dst/lib/bash/{*.h,Makefile.*}
}
