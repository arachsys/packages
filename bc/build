check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.6.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.6.0/bc-6.6.0.tar.xz
  apply editrc.diff
  tree 36e85c68eb7c656e79f50ff8db64c2b53ad0e0db14e7be5cc63c2e1657a3dfe7
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
