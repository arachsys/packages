check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.3.1 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.3.1/bc-6.3.1.tar.xz
  tree 9e33f727a3d8cc7bca43001eee9af9483ee00ad8df42afc09fe20521295cf4ec
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
