check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.1.1 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.1.1/bc-5.1.1.tar.xz
  tree 4cc10f4e28e3c6c3221d9921b85fca6316e5690846bf181a7ed5262b08c840da
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
