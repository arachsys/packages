check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.2.2 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.2.2/bc-6.2.2.tar.xz
  tree e6e710b4bf53abf84d2f965dc58f05c40f95572aacab6c02b09383dcdffe62f6
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
