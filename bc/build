check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.2.1 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.2.1/bc-5.2.1.tar.xz
  tree 9126abf09d7a4c590fb076ccd2c71676719dbd196d940c29b02fc656971f8248
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
