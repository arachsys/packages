check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.2.3 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.2.3/bc-5.2.3.tar.xz
  tree 6b3dc54217d73980ec8979d7dd2108716003839eac7b3a35dd7d78e90ad14805
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
