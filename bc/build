check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.0.2 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.0.2/bc-5.0.2.tar.xz
  tree 4360464b0011ff5607e66bb920110cb529f1f7c98957616aed23add2a80e7e3e
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
