check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.6.1 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.6.1/bc-6.6.1.tar.xz
  apply editrc.diff
  tree 3df148c7272f31562920b15efaa75309f09f7ed58247504df989cdd2261f80cd
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
