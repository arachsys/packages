check() {
  url https://github.com/gavinhoward/bc/tags
  match version 7.0.2 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/7.0.2/bc-7.0.2.tar.xz
  tree f6c28cbd57267a2360bb088e0a586e6ce9c1bdd73f1ca508f9fba3bcdc7b7ace
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls --enable-readline
  make
  make install DESTDIR=/dst
}
