check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.2.0 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.2.0/bc-5.2.0.tar.xz
  tree a0cb57c279d1241351a3fa24f8023e72b504113473aa10a36ce1788bb552a228
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
