check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.3.3 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.3.3/bc-5.3.3.tar.xz
  tree 5f5f2140d7dc857a44d1fe21ea0c2a9fb017d13e924c9f5d6d905c65ede530ea
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
