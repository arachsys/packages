check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.1.1 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.1.1/bc-6.1.1.tar.xz
  tree 68168bd0efc34aa1399a94953896772b5dff7966368cbd2799191e13959682ed
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
