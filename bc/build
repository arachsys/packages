check() {
  url https://github.com/gavinhoward/bc/releases
  match version 6.0.1 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.0.1/bc-6.0.1.tar.xz
  tree 70b8ca4adcd6b30f6dcb5389cd2a2183e99aec8bf1e58c78c1a1323b70fc1a0c
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
