check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.2.5 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.2.5/bc-6.2.5.tar.xz
  tree c5b509e243e2abe39c0b0a1dab10af91e7f10aad224aea17c163f8902daae331
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
