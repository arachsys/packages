check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.0.3 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.0.3/bc-6.0.3.tar.xz
  tree 60da60adc28e0a2d9d6186f1906954aac8bf473d4df4061c912a8aa1cb369808
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
