check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.0.1 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.0.1/bc-5.0.1.tar.xz
  tree a433df95e7e44f5cfbbb67ba8295db0c9d23dd0a36d75205a9ef59dbf838341c
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
