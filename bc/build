check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.7.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.7.0/bc-6.7.0.tar.xz
  apply editrc.diff
  tree e04228a32ab70b85ec7181ffc612e7aa7bafc450115868a63c19b263b715f187
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
