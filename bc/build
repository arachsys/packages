check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.7.3 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.7.3/bc-6.7.3.tar.xz
  apply editrc.diff
  tree 02b7b3a7029fae370b2156cd0fafd937dd6c6d34322f462ff4168d1f839c1673
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
