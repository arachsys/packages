check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.2.5 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.2.5/bc-5.2.5.tar.xz
  tree f7c16d1d90b6871fdef3abd34d6e7114e4eee0d59189682177e19142be5595db
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
