check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.2.2 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.2.2/bc-5.2.2.tar.xz
  tree 971a04647511d01c49afaa65574822ee93191fbba4f8fa2df6fe0671d0ef506f
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
