check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.5.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.5.0/bc-6.5.0.tar.xz
  tree 2943b36db97a963b5e4e4157beca5de3e648c93793106518f2706be1408d986a
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
