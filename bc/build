check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.3.1 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.3.1/bc-5.3.1.tar.xz
  tree bfa83efa1d657987fdf666354ae15ddef86dc6b6dd62041fe5817450d9afeb41
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
