prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/4.0.0/bc-4.0.0.tar.xz
  tree 61003eaefbdce0b510e5ed7a24095e571cae4e2b3b07acadb9ba7c478487cf69
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
