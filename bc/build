check() {
  url https://github.com/gavinhoward/bc/tags
  match version 7.0.1 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/7.0.1/bc-7.0.1.tar.xz
  apply editrc.diff
  tree b4b5d236ed4b82c0aa2087095ca6553231790af354bb704eb2c07e1379070581
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls --enable-readline
  make
  make install DESTDIR=/dst
}
