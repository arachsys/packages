check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.0.2 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.0.2/bc-6.0.2.tar.xz
  tree 24e44ea693d0794d75d878830f0ddb529f4555edcd8cd0e3f2741bda29d9bfa6
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
