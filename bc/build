check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.2.4 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.2.4/bc-6.2.4.tar.xz
  tree 41a59cbc7a09d08bbb1cac799c5e1a6d78cfe9c036b7599255512ee78109b39a
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
