check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.2.4 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.2.4/bc-5.2.4.tar.xz
  tree bb280d3f2f15674cabc3d1a5ed48a58156ab21ea9f6340008adb5c28f86e5b4a
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
