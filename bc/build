check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.4.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.4.0/bc-6.4.0.tar.xz
  tree 436ed92577fff883d3ce6567637bc1e284e13b3c7eec2a28e2f3881207035911
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
