check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.2.1 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.2.1/bc-6.2.1.tar.xz
  tree 4a04c5434543bbd7f8ab1500bf3ca946686b9e4017e070a8262955a746be9fa1
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
