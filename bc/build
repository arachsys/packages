check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.0.4 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.0.4/bc-6.0.4.tar.xz
  tree 6a836f9082d253ac4422ae4be76f0767883ceb2dcc94ba1b312e8654be1c5488
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
