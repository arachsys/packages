check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.7.4 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.7.4/bc-6.7.4.tar.xz
  apply editrc.diff
  tree 5c839dc3c35758e1aaf146fed08d17d06b4e9817dc507d9acc4feee88c5f7e04
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
