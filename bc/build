check() {
  url https://github.com/gavinhoward/bc/releases
  match version 5.0.0 'bc-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/5.0.0/bc-5.0.0.tar.xz
  tree 62df6b7e04416b9775712c35e163d2930eafdab67029890f4b41c580f585894e
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
