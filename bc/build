check() {
  url https://github.com/gavinhoward/bc/tags
  match version 6.7.2 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/gavinhoward/bc/releases/download/6.7.2/bc-6.7.2.tar.xz
  apply editrc.diff
  tree 6ac53643eb1621c2bcb32aaf0bc333a9ba7914829063963cecffc1176efef6ac
}

build() {
  PREFIX= DATAROOTDIR=/lib MANDIR=/lib/man CC="cc -std=c99" /src/configure \
    --opt=3 --disable-generated-tests --disable-nls
  make
  make install DESTDIR=/dst
}
