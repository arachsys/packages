require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools/branches/master
  match snapshot 20220112 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20220112-7b15324d.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/7b15324de1095f3e2e423e9c53da076d208b52d5.tar.gz
  apply cosmetic.diff
  apply make.diff
  tree e354383eb329951f9695c8d792e6c1202bf26f276fb06f87f010243475c5e1be
}

build() {
  make bcachefs VERSION=20220112-7b15324d
  install -s -t /dst/bin -D bcachefs
}
