require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools
  match snapshot 20211013 \
    '"pushed_at": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20211013-e489658c.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/e489658c490524a921bc30474fa54d55aa8867c4.tar.gz
  apply cosmetic.diff
  apply make.diff
  apply scrypt.diff
  tree 92471fcb79e048c224e612677d0d0b6101924ce80a75fbc6644966bf2487cb81
}

build() {
  make bcachefs VERSION=20211013-e489658c
  install -s -t /dst/bin -D bcachefs
}
