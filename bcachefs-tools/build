require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools/branches/master
  match snapshot 20211121 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20211121-1d2315ca.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/1d2315ca0a60e60a04921aece6587e1bfad17ccf.tar.gz
  apply cosmetic.diff
  apply make.diff
  tree 2a7b5bfda77c12b0dbc4567da131fd52f09227b6015edb070751e43dc455682e
}

build() {
  make bcachefs VERSION=20211121-1d2315ca
  install -s -t /dst/bin -D bcachefs
}
