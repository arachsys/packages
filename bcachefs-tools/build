require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools
  match snapshot 20211104 \
    '"pushed_at": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20211104-e87deba8.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/e87deba8e4a653df2abe5592eb3dc83cb7966410.tar.gz
  apply cosmetic.diff
  apply make.diff
  tree a72864db229dd8b79793833a53334ce4968f0ff0e50a9581c762954b66d044a9
}

build() {
  make bcachefs VERSION=20211104-e87deba8
  install -s -t /dst/bin -D bcachefs
}
