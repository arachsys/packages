require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools/branches/master
  match snapshot 20211130 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20211130-99b12cd3.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/99b12cd3a4cdd19985624b79a8c54716cad649bd.tar.gz
  apply cosmetic.diff
  apply make.diff
  tree cf79ac0f800d67ef5b834bd38e804588503063ea6e446273428404cb59023c5c
}

build() {
  make bcachefs VERSION=20211130-99b12cd3
  install -s -t /dst/bin -D bcachefs
}
