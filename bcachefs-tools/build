require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools
  match snapshot 20211028 \
    '"pushed_at": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20211028-a315a3f6.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/a315a3f664f9cf5cc687738ad97210721ccde8fd.tar.gz
  apply cosmetic.diff
  apply make.diff
  tree 8208b74d1597fdee77e1845d6dc8738aa63b975a70db951ec5cb879cf4560a09
}

build() {
  make bcachefs VERSION=20211028-a315a3f6
  install -s -t /dst/bin -D bcachefs
}
