require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools/branches/master
  match snapshot 20220322 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20220322-f3cdace8.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/f3cdace86c8b60a4efaced23b2d31c16dc610da9.tar.gz
  apply cosmetic.diff
  apply make.diff
  tree d47e17babc514ee0fe1426ee61624e2d95099fb523c621af93a92a4b047c27a5
}

build() {
  make bcachefs VERSION=20220322-f3cdace8
  install -s -t /dst/bin -D bcachefs
}
