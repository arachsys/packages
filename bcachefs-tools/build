require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools/branches/master
  match snapshot 20211106 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20211106-abd9d5ba.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/abd9d5ba97a8a72508f85bb0fbf0120f07c453e1.tar.gz
  apply cosmetic.diff
  apply make.diff
  tree fd04106b81520c0fdbf429fa68a988911bca55e6bd9dcdc79027cb4ba46bba4e
}

build() {
  make bcachefs VERSION=20211106-abd9d5ba
  install -s -t /dst/bin -D bcachefs
}
