require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools/branches/master
  match snapshot 20211214 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20211214-b19d9f92.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/b19d9f92e12c2e78d6e306e6cb7f8a7d9a7875f3.tar.gz
  apply cosmetic.diff
  apply make.diff
  tree cdab1c576a1c9cfedcd9b2366aab7bae20ae936c2c74f616bd28eaca17317031
}

build() {
  make bcachefs VERSION=20211214-b19d9f92
  install -s -t /dst/bin -D bcachefs
}
