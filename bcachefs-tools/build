require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools/branches/master
  match snapshot 20211222 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20211222-cb8a0366.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/cb8a0366f2f36a389ad222e9471fcecc406491d0.tar.gz
  apply cosmetic.diff
  apply make.diff
  tree 182421350f84d7772e956d7d10436e589a468c0ca72c9b3503716f1162e0ca1f
}

build() {
  make bcachefs VERSION=20211222-cb8a0366
  install -s -t /dst/bin -D bcachefs
}
