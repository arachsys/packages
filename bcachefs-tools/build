require keyutils libaio libsodium liburcu lz4

check() {
  url https://api.github.com/repos/koverstreet/bcachefs-tools/branches/master
  match snapshot 20220509 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack bcachefs-tools-20220509-0766bee8.tar.gz \
    https://github.com/koverstreet/bcachefs-tools/archive/0766bee8fdf3973953fd3184f63dfe2a0760c08d.tar.gz
  apply cosmetic.diff
  apply make.diff
  tree e1b008784d30ef9aceba77d73d851de5761fd6c2a5fa11cb4dde07becc91e3ef
}

build() {
  make bcachefs VERSION=20220509-0766bee8
  install -s -t /dst/bin -D bcachefs
}
