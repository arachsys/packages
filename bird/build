require bison flex

check() {
  url https://bird.nic.cz/get-bird/
  match version 2.18 'bird-(2\.[0-9.]+)\.tar'
}

prepare() {
  unpack https://bird.nic.cz/download/bird-2.18.tar.gz
  apply history.diff
  tree ea9d1acf24fc4313a19e66b0ac60375cd563db725fe9e7bfe5ca3de85fa4a6bf
}

build() {
  auto-config
  make install DESTDIR=/dst
}
