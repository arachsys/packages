require bison flex

check() {
  url https://bird.nic.cz/get-bird/
  match version 2.17.3 'bird-(2\.[0-9.]+)\.tar'
}

prepare() {
  unpack https://bird.nic.cz/download/bird-2.17.3.tar.gz
  apply history.diff
  tree 29d4e937fb77e685ae9e495eecc12625f368a34eea1091cf5469e1e9ffeda8fa
}

build() {
  auto-config
  make install DESTDIR=/dst
}
