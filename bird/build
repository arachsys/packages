require bison flex

check() {
  url https://bird.network.cz/download/
  match version 2.15.1 'bird-([0-9.]+)\.tar'
}

prepare() {
  unpack https://bird.network.cz/download/bird-2.15.1.tar.gz
  apply babel.diff
  apply history.diff
  tree c1e13d08064f9c6fd0c4ee996cae9d6df4649a82d383ef9e5d15c5657c751668
}

build() {
  auto-config
  make install DESTDIR=/dst
}
