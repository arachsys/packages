require bison flex

check() {
  url https://bird.network.cz/download/
  match version 2.14 'bird-([0-9.]+)\.tar'
}

prepare() {
  unpack https://bird.network.cz/download/bird-2.14.tar.gz
  apply history.diff
  tree ed368a65f433cf6fc79c9e1661571086a5d8d93e89914bd4e3c4a5b7fcbd47b6
}

build() {
  auto-config
  make install DESTDIR=/dst
}
