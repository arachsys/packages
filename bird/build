require bison flex

check() {
  url https://bird.network.cz/download/
  match version 2.15 'bird-([0-9.]+)\.tar'
}

prepare() {
  unpack https://bird.network.cz/download/bird-2.15.tar.gz
  apply history.diff
  tree 43e2a8b6ac4debe4204f1d4b0ffc3938156d889d9a69c673103e9853b7d93332
}

build() {
  auto-config
  make install DESTDIR=/dst
}
