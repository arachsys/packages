require bison flex

check() {
  url https://bird.nic.cz/get-bird/
  match version 2.17.2 'bird-(2\.[0-9.]+)\.tar'
}

prepare() {
  unpack https://bird.nic.cz/download/bird-2.17.2.tar.gz
  apply history.diff
  tree 0bd1629acdb66eef9bb9cbc7dae19481cb13231386ee602fa2fe2ae2ece8b21e
}

build() {
  auto-config
  make install DESTDIR=/dst
}
