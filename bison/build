mode autotools
require m4

check() {
  url https://ftp.gnu.org/gnu/bison/
  match version 3.8 'bison-([0-9.]+)\.tar'
}

prepare() {
  unpack https://ftp.gnu.org/gnu/bison/bison-3.8.tar.xz
  tree d513c8dc3c3a61f5471c403b3cae6a7a563b41b79ea5c57a79771699fc8923c9
}

post-install() {
  rm -f -r /dst/lib/{aclocal,bison/*.css,bison/xslt,**/README*}
  cat >/dst/bin/yacc <<'EOF'
#!/bin/sh
exec bison -y "$@"
EOF
  chmod 0755 /dst/bin/yacc
  echo m4 >>/dst/requirements
}
