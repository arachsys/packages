mode autotools
require m4

prepare() {
  unpack https://ftp.gnu.org/gnu/bison/bison-3.7.6.tar.xz
  tree 6d823d1a622bce7ed1741c30b36c3b421f04ee473c2cbebcb1ba012798e9af58
}

post-install() {
  rm -f -r /dst/lib/{aclocal,bison/*.css,bison/xslt,**/README*}
  cat >/dst/bin/yacc <<'EOF'
#!/bin/sh
exec bison -y "$@"
EOF
  chmod 0755 /dst/bin/yacc
  echo m4 >>/dst/requirements
}
