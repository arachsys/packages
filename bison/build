mode autotools
require m4

check() {
  url https://ftp.gnu.org/gnu/bison/
  match version 3.8.1 'bison-([0-9.]+)\.tar'
}

prepare() {
  unpack https://ftp.gnu.org/gnu/bison/bison-3.8.1.tar.xz
  tree 83e2aa89cfabc00987700ed395aa5b861695cb24cbcd49258c27f6e6fe22570a
}

post-install() {
  rm -f -r /dst/lib/{aclocal,bison/*.css,bison/xslt,**/README*}
  cat >/dst/bin/yacc <<'EOF'
#!/bin/sh
exec bison -y "$@"
EOF
  chmod 0755 /dst/bin/yacc
  echo m4 >>/dst/requirements
}
