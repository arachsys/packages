check() {
  url https://ftpmirror.gnu.org/gnu/coreutils/
  match version 9.8 'coreutils-([0-9.]+)\.tar'
}

prepare() {
  unpack https://ftpmirror.gnu.org/gnu/coreutils/coreutils-9.8.tar.xz
  apply fmt.diff
  tree d19e47f86fd3d6b689fd2d0a36bc2a36022285117a4d98ca638862c468037260
}

build() {
  FORCE_UNSAFE_CONFIGURE=1 auto-config --enable-install-program=hostname \
    --enable-no-install-program=hostid,kill,pinky,uptime,users,who
  make install DESTDIR=/dst run_help2man=/src/man/dummy-man
}
