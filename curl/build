mode autotools

check() {
  url https://curl.haxx.se/download/
  match curl 7.79.1 'curl-([0-9.]+)\.tar'

  url https://github.com/nghttp2/nghttp2/releases
  match nghttp2 1.45.1 'nghttp2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://curl.haxx.se/download/curl-7.79.1.tar.xz
  unpack -d nghttp2 \
    https://github.com/nghttp2/nghttp2/releases/download/v1.45.1/nghttp2-1.45.1.tar.xz
  apply paths.diff
  tree 408b5d07bc98f362a2d71aef4dae4cb3e8907279cce3981622ee49b5e52faf9d
}

pre-config() {
  cd /src/nghttp2
  /src/nghttp2/configure --disable-shared --enable-lib-only --with-pic
  make

  cd /src
  unexpand curl-config.in >curl-config.in.tmp
  mv -f curl-config.in{.tmp,}
  export PATH_SEPARATOR=:
}

config-extra --with-ca-bundle=/etc/ssl/cert.pem --with-openssl \
  CPPFLAGS="-DUSE_NGHTTP2=1 -I/src/nghttp2/lib/includes" \
  LDFLAGS=-L/src/nghttp2/lib/.libs LIBS=-lnghttp2

post-install() {
  rm -f /dst/bin/curl-config /dst/lib/aclocal/libcurl.m4
}
