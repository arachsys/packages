check() {
  url https://curl.haxx.se/download/
  match curl 8.2.1 'curl-([0-9.]+)\.tar'

  url https://github.com/nghttp2/nghttp2/tags
  match nghttp2 1.56.0 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://curl.haxx.se/download/curl-8.2.1.tar.xz
  unpack -d nghttp2 \
    https://github.com/nghttp2/nghttp2/releases/download/v1.56.0/nghttp2-1.56.0.tar.xz
  apply paths.diff
  tree fbfbb5d6cdeda81eb07fe851a5d1fbc4c1535758638b91887cef9da6d27873c0
}

build() {
  cd /src/nghttp2
  auto-config --disable-shared --enable-lib-only --with-pic
  make

  cd /src
  unexpand curl-config.in >curl-config.in.tmp
  mv -f curl-config.in{.tmp,}
  PATH_SEPARATOR=: auto-config \
    --with-ca-bundle=/etc/ssl/cert.pem --with-openssl \
    CPPFLAGS="-DUSE_NGHTTP2=1 -I/src/nghttp2/lib/includes" \
    LDFLAGS=-L/src/nghttp2/lib/.libs LIBS=-lnghttp2
  make install DESTDIR=/dst
  rm -f /dst/bin/curl-config /dst/lib/aclocal/libcurl.m4
}
