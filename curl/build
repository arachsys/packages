mode autotools

check() {
  url https://curl.haxx.se/download/
  match curl 8.1.2 'curl-([0-9.]+)\.tar'

  url https://github.com/nghttp2/nghttp2/tags
  match nghttp2 1.54.0 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://curl.haxx.se/download/curl-8.1.2.tar.xz
  unpack -d nghttp2 \
    https://github.com/nghttp2/nghttp2/releases/download/v1.54.0/nghttp2-1.54.0.tar.xz
  apply paths.diff
  tree 5204aa49729e79717aff63733bca095c3dcb218ccc7af1ae049ff376f6638d52
}

pre-config() {
  cd /src/nghttp2
  /src/nghttp2/configure --disable-shared --enable-lib-only --with-pic
  make

  cd /src
  unexpand curl-config.in >curl-config.in.tmp
  mv -f curl-config.in{.tmp,}
  export PATH_SEPARATOR=:
}

config-extra --with-ca-bundle=/etc/ssl/cert.pem --with-openssl \
  CPPFLAGS="-DUSE_NGHTTP2=1 -I/src/nghttp2/lib/includes" \
  LDFLAGS=-L/src/nghttp2/lib/.libs LIBS=-lnghttp2

post-install() {
  rm -f /dst/bin/curl-config /dst/lib/aclocal/libcurl.m4
}
