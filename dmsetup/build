mode autotools

check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.19 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.19.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.19.tgz
  apply static.diff
  apply tidy.diff
  tree 7d162272fcfbd8e84a3e0f17224ac16c7f06236ad72fcbe8d2b26971f6656446
}

config-extra --enable-{static-link,dmfilemapd} --without-{cache,thin,vdo}

build() {
  filter-defaults && /src/configure "${CONFIGARGS[@]}"
  make device-mapper
  make -C libdm/dm-tools dmsetup dmfilemapd
  install -t /dst/bin -D libdm/dm-tools/{dmsetup,dmfilemapd}
}
