check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.26 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.26.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.26.tgz
  apply static.diff
  apply tidy.diff
  tree 3df9da8130cfcdf3110e9b910585ed8621596eba5c1c547bd74669f8ed119dc5
}

build() {
  auto-config --enable-{static-link,dmfilemapd} \
    --without-{cache,symvers,thin,vdo}
  make device-mapper
  make -C libdm/dm-tools dmsetup dmfilemapd
  install -t /dst/bin -D libdm/dm-tools/{dmsetup,dmfilemapd}
}
