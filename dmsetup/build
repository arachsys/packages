mode autotools

check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.18 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.18.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.18.tgz
  apply static.diff
  apply tidy.diff
  tree 31e004ca5b5b343676a014ddd3ad5e0e16aee42fbf9277e43698cd05d16c1bed
}

config-extra --enable-{static-link,dmfilemapd} --without-{cache,thin,vdo}

build() {
  filter-defaults && /src/configure "${CONFIGARGS[@]}"
  make device-mapper
  make -C libdm/dm-tools dmsetup dmfilemapd
  install -t /dst/bin -D libdm/dm-tools/{dmsetup,dmfilemapd}
}
