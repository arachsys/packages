mode autotools

check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.20 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.20.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.20.tgz
  apply static.diff
  apply tidy.diff
  tree e2ebf565575b3b804c29399e16a0f2181663030a64c3a2a570f71b25ec9bd1bd
}

config-extra --enable-{static-link,dmfilemapd} --without-{cache,thin,vdo}

build() {
  filter-defaults && /src/configure "${CONFIGARGS[@]}"
  make device-mapper
  make -C libdm/dm-tools dmsetup dmfilemapd
  install -t /dst/bin -D libdm/dm-tools/{dmsetup,dmfilemapd}
}
