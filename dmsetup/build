mode autotools

check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.14 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.14.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.14.tgz
  apply static.diff
  apply tidy.diff
  tree dfa962be431ade396bb1552a8b3111ee9feb76f878b56d46612c45f1504b72e5
}

config-extra --enable-{static-link,dmfilemapd} --without-{cache,thin,vdo}

build() {
  filter-defaults && /src/configure "${CONFIGARGS[@]}"
  make device-mapper
  make -C libdm/dm-tools dmsetup dmfilemapd
  install -t /dst/bin -D libdm/dm-tools/{dmsetup,dmfilemapd}
}
