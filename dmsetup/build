mode autotools

check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.16 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.16.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.16.tgz
  apply static.diff
  apply tidy.diff
  tree 0d06de312164d37c26e5c5dec6e7ac2429f53dcfb48947922810887b3e819613
}

config-extra --enable-{static-link,dmfilemapd} --without-{cache,thin,vdo}

build() {
  filter-defaults && /src/configure "${CONFIGARGS[@]}"
  make device-mapper
  make -C libdm/dm-tools dmsetup dmfilemapd
  install -t /dst/bin -D libdm/dm-tools/{dmsetup,dmfilemapd}
}
