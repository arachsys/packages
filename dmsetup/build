check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.24 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.24.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.24.tgz
  apply static.diff
  apply tidy.diff
  tree 443a40ad2c0ef3bff045a25a9b9c8f2d18b79963c6716146a4362605b4cbe64c
}

build() {
  auto-config --enable-{static-link,dmfilemapd} \
    --without-{cache,symvers,thin,vdo}
  make device-mapper
  make -C libdm/dm-tools dmsetup dmfilemapd
  install -t /dst/bin -D libdm/dm-tools/{dmsetup,dmfilemapd}
}
