mode autotools

check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.15 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.15.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.15.tgz
  apply static.diff
  apply tidy.diff
  tree 460f354250b11dfcde7207c186b1ea2aaf25a75035ce487a43c80857a67ba1e1
}

config-extra --enable-{static-link,dmfilemapd} --without-{cache,thin,vdo}

build() {
  filter-defaults && /src/configure "${CONFIGARGS[@]}"
  make device-mapper
  make -C libdm/dm-tools dmsetup dmfilemapd
  install -t /dst/bin -D libdm/dm-tools/{dmsetup,dmfilemapd}
}
