mode autotools

check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.17 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.17.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.17.tgz
  apply static.diff
  apply tidy.diff
  tree 284df56956f62516264d0e29635ae099c33bd78a3f1cbd87830d49a98426ee80
}

config-extra --enable-{static-link,dmfilemapd} --without-{cache,thin,vdo}

build() {
  filter-defaults && /src/configure "${CONFIGARGS[@]}"
  make device-mapper
  make -C libdm/dm-tools dmsetup dmfilemapd
  install -t /dst/bin -D libdm/dm-tools/{dmsetup,dmfilemapd}
}
