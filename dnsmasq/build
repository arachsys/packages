check() {
  url https://thekelleys.org.uk/dnsmasq/
  match version 2.89 'dnsmasq-([0-9.]+)\.tar'
}

prepare() {
  unpack https://thekelleys.org.uk/dnsmasq/dnsmasq-2.89.tar.xz
  apply dhcp6.diff
  tree 438468a496602a7cf885a7829abd8b83f17ebaaf047ed06121e8bd7991de0c24
}

build() {
  make COPTS+='-DLEASEFILE=\"/var/lib/dnsmasq.leases\"' \
       COPTS+='-DRUNFILE=\"/run/dnsmasq.pid\"'
  make install DESTDIR=/dst BINDIR=/bin MANDIR=/lib/man
}
