check() {
  url https://thekelleys.org.uk/dnsmasq/
  match version 2.88 'dnsmasq-([0-9.]+)\.tar'
}

prepare() {
  unpack https://thekelleys.org.uk/dnsmasq/dnsmasq-2.88.tar.xz
  apply radv.diff
  tree 8b49a7a86aed748edc8c873be36a4d3920db7d43aa46cf83e9b98667251b19a6
}

build() {
  make COPTS+='-DLEASEFILE=\"/var/lib/dnsmasq.leases\"' \
       COPTS+='-DRUNFILE=\"/run/dnsmasq.pid\"'
  make install DESTDIR=/dst BINDIR=/bin MANDIR=/lib/man
}
