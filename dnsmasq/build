check() {
  url https://thekelleys.org.uk/dnsmasq/
  match version 2.87 'dnsmasq-([0-9.]+)\.tar'
}

prepare() {
  unpack https://thekelleys.org.uk/dnsmasq/dnsmasq-2.87.tar.xz
  tree 0a9956b65cf9eb23ff429a246eb1b44e18678dc6dbcd54994234970bc0563085
}

build() {
  make COPTS+='-DLEASEFILE=\"/var/lib/dnsmasq.leases\"' \
       COPTS+='-DRUNFILE=\"/run/dnsmasq.pid\"'
  make install DESTDIR=/dst BINDIR=/bin MANDIR=/lib/man
}
