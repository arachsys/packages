check() {
  url https://thekelleys.org.uk/dnsmasq/
  match version 2.86 'dnsmasq-([0-9.]+)\.tar'
}

prepare() {
  unpack https://thekelleys.org.uk/dnsmasq/dnsmasq-2.86.tar.xz
  tree 74067928f4bc9a4831e5934080d15071ede771b6039391b512d969c3213e75ab
}

build() {
  make COPTS+='-DLEASEFILE=\"/var/lib/dnsmasq.leases\"' \
       COPTS+='-DRUNFILE=\"/run/dnsmasq.pid\"'
  make install DESTDIR=/dst BINDIR=/bin MANDIR=/lib/man
}
