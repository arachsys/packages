check() {
  url https://thekelleys.org.uk/dnsmasq/
  match version 2.85 'dnsmasq-([0-9.]+)\.tar'
}

prepare() {
  unpack https://thekelleys.org.uk/dnsmasq/dnsmasq-2.85.tar.xz
  tree fa583453babe4a70fdf8683428005c277a7e40864da06eb53894b413457ddf10
}

build() {
  make COPTS+='-DLEASEFILE=\"/var/lib/dnsmasq.leases\"' \
       COPTS+='-DRUNFILE=\"/run/dnsmasq.pid\"'
  make install DESTDIR=/dst BINDIR=/bin MANDIR=/lib/man
}
