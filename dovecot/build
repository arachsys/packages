enable rpaths

check() {
  url https://dovecot.org/download
  match version 2.3.20 'dovecot-([0-9.]+)\.tar'

  url https://pigeonhole.dovecot.org/download.html
  match pigeonhole 0.5.20 'dovecot-[0-9.]+-pigeonhole-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dovecot.org/releases/2.3/dovecot-2.3.20.tar.gz
  unpack -d pigeonhole \
    https://pigeonhole.dovecot.org/releases/2.3/dovecot-2.3-pigeonhole-0.5.20.tar.gz
  apply paths.diff
  apply users.diff
  tree 1a3aeca5212db7bab47a36090db01b8a013aeac3d0314e54e9a02d51ecbf67f7
}

build() {
  auto-config --with-moduledir=/lib/dovecot/modules \
    --with-rundir=/run/dovecot
  make install DESTDIR=/dst pkgsysconfdir=/etc/mail \
    pkglibdir=/lib/dovecot/shared

  cd /src/pigeonhole
  auto-config --with-dovecot=/src --with-moduledir=/lib/dovecot/modules \
    --with-rundir=/run/dovecot
  make install DESTDIR=/dst pkgsysconfdir=/etc/mail \
    pkglibdir=/lib/dovecot/shared

  rm -f -r /dst/bin/dovecot-sysreport /dst/bin/sieve-dump /dst/lib/aclocal \
    /dst/lib/dovecot/**/{*.a,decode2test.sh} /dst/lib/include
}
