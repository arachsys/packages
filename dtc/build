require bison flex m4

check() {
  url https://github.com/dgibson/dtc/tags
  match version 1.6.1 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/dgibson/dtc/archive/refs/tags/v1.6.1.tar.gz
  apply tidy.diff
  tree ab4be763d8ffb773716f70d7b35c05d823b1a4b8821ecf1924ce0b11e36a55f9
}

build() {
  make install DESTDIR=/dst PREFIX= INCLUDEDIR=/lib/include \
    INSTALL=install NO_YAML=1 PKG_CONFIG=false
}
