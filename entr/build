check() {
  url https://github.com/eradman/entr/tags
  match version 5.3 '([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/eradman/entr/archive/refs/tags/5.3.tar.gz
  apply cosmetic.diff
  tree 516fc2689f11cb64edd0b7e9152d0295678b71f2083b2cd0d8b6b266499c9fc6
}

build() {
  make -f Makefile.linux entr CFLAGS=-O2
  install -D entr /dst/bin/entr
}
