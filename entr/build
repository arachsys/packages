check() {
  url https://github.com/eradman/entr/tags
  match version 5.4 '([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/eradman/entr/archive/refs/tags/5.4.tar.gz
  apply cosmetic.diff
  tree f36f43e82d5100498cfc2641986489527754636b353fd58b66fd2b06ddff8fff
}

build() {
  make -f Makefile.linux entr CFLAGS=-O2
  install -D entr /dst/bin/entr
}
