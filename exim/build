require sqlite

check() {
  url https://downloads.exim.org/exim4/
  match version 4.99.1 'exim-([0-9.]+)\.tar'
}

prepare() {
  unpack https://downloads.exim.org/exim4/exim-4.99.1.tar.xz
  apply config.diff
  apply exepath.diff
  apply libressl.diff
  apply logs.diff
  apply lsearch.diff
  apply paths.diff
  apply uidgid.diff
  tree a24f918ee399d44b50d2225709df11c454c8990fe984757bec9603a7ae5f06c8
}

build() {
  make makefile
  make -C build-* exim PREFIX=
  install -s -t /dst/bin -D build-*/exim
  image - requires sqlite
}
