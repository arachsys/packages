require sqlite

check() {
  url https://downloads.exim.org/exim4/
  match version 4.99 'exim-([0-9.]+)\.tar'
}

prepare() {
  unpack https://downloads.exim.org/exim4/exim-4.99.tar.xz
  apply config.diff
  apply exepath.diff
  apply logs.diff
  apply lsearch.diff
  apply paths.diff
  apply uidgid.diff
  tree 82527ebc13c8918b37e4f1a8af54d3a05c007d6c18b8ddb6f10c6257de4ca6e9
}

build() {
  make makefile
  make -C build-* exim PREFIX=
  install -s -t /dst/bin -D build-*/exim
  image - requires sqlite
}
