require sqlite

check() {
  url https://downloads.exim.org/exim4/
  match version 4.99 'exim-([0-9.]+)\.tar'
}

prepare() {
  unpack https://downloads.exim.org/exim4/exim-4.99.tar.xz
  apply config.diff
  apply exepath.diff
  apply libressl.diff
  apply logs.diff
  apply lsearch.diff
  apply paths.diff
  apply uidgid.diff
  tree be49e39fd78f582f2f15f52c8dc3747450bc307cbce544536fd4052b466f5582
}

build() {
  make makefile
  make -C build-* exim PREFIX=
  install -s -t /dst/bin -D build-*/exim
  image - requires sqlite
}
