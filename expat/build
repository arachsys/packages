mode autotools

check() {
  url https://github.com/libexpat/libexpat/releases
  match version 2.4.3 'expat-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/libexpat/libexpat/releases/download/R_2_4_3/expat-2.4.3.tar.xz
  tree 274dd1cf45939beb8e1db66fc0657d516c86cabb38a54914cdb64a18bf169462
}

post-install() {
  rm -f -r /dst/lib/cmake
}
