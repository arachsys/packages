mode autotools

check() {
  url https://github.com/libexpat/libexpat/releases
  match version 2.4.7 'expat-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/libexpat/libexpat/releases/download/R_2_4_7/expat-2.4.7.tar.xz
  tree 4c4bc8fdb92863eb02e3a170129cb1d5d83bc273b31f887cec84e66f9b27b36d
}

post-install() {
  rm -f -r /dst/lib/cmake
}
