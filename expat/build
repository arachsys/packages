mode autotools

check() {
  url https://github.com/libexpat/libexpat/releases
  match version 2.4.2 'expat-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/libexpat/libexpat/releases/download/R_2_4_2/expat-2.4.2.tar.xz
  tree e2f031c3f14a13c1362ecd6259318cf97948ccd25ff50e950861fdfde08329d2
}

post-install() {
  rm -f -r /dst/lib/cmake
}
