check() {
  url https://github.com/libexpat/libexpat/tags
  match version 2.6.1 'tags/R_([0-9]+)_([0-9]+)_([0-9]+)\.tar' '\1.\2.\3'
}

prepare() {
  unpack https://github.com/libexpat/libexpat/releases/download/R_2_6_1/expat-2.6.1.tar.xz
  tree 78cf6f9435938bb47185b6fe9c2cf9a07a05471a8d42aedcbbf5c63ed97614e2
}

build() {
  auto-config LDFLAGS=-Wl,--as-needed,-lunwind
  make install DESTDIR=/dst
  rm -f -r /dst/lib/cmake
}
