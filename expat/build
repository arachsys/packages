mode autotools

check() {
  url https://github.com/libexpat/libexpat/releases
  match version 2.4.6 'expat-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/libexpat/libexpat/releases/download/R_2_4_6/expat-2.4.6.tar.xz
  tree aaebdb6a2e00ce3664ed090705c85e27cdb671ff3cc9df4e10ebc0fad768bd2d
}

post-install() {
  rm -f -r /dst/lib/cmake
}
