check() {
  url https://github.com/libexpat/libexpat/tags
  match version 2.7.2 'tags/R_([0-9]+)_([0-9]+)_([0-9]+)\.tar' '\1.\2.\3'
}

prepare() {
  unpack https://github.com/libexpat/libexpat/releases/download/R_2_7_2/expat-2.7.2.tar.xz
  tree 5c9ae80ae63d6fac5551fff0d2dd709af9f45215b655709d94a1785d5d551696
}

build() {
  auto-config LDFLAGS=-Wl,--as-needed,-lunwind
  make install DESTDIR=/dst
  rm -f -r /dst/lib/cmake
}
