mode autotools

check() {
  url https://github.com/libexpat/libexpat/releases
  match version 2.4.4 'expat-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/libexpat/libexpat/releases/download/R_2_4_4/expat-2.4.4.tar.xz
  tree 150d6701448449fb31340328912dee4045bfbb30b0e3f76ddf51a021a703a8a9
}

post-install() {
  rm -f -r /dst/lib/cmake
}
