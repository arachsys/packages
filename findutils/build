mode autotools

check() {
  url https://ftp.gnu.org/gnu/findutils/
  match version 4.9.0 'findutils-([0-9.]+)\.tar'
}

prepare() {
  unpack https://ftp.gnu.org/gnu/findutils/findutils-4.9.0.tar.xz
  apply paths.diff
  tree c0e980af529f59e1f813d9522adfda2e6d7ffecd82b0204ddf6d4fd1df33de53
}

config-extra --libexecdir='${prefix}/bin' --localstatedir=/var/lib/misc

post-install() {
  rm -f /dst/bin/{frcode,locate,updatedb}
}
