require rust

prepare() {
  unpack firecracker-0.23.3.tar.gz \
    https://github.com/firecracker-microvm/firecracker/archive/refs/tags/v0.23.3.tar.gz
  HOME=/tmp cargo fetch --target=$CHOST
  tree 9ac3aab599d78dede2355826bec426d28414a778a2b01da7e048185280f2ca8a
}

build() {
  HOME=/tmp cargo build --release --target=$CHOST
  install -s -D build/cargo_target/*/release/firecracker /dst/bin/firecracker
}
