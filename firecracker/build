require rust
[[ $CHOST == aarch64-* ]] && require dtc

prepare() {
  unpack firecracker-0.23.3.tar.gz \
    https://github.com/firecracker-microvm/firecracker/archive/refs/tags/v0.23.3.tar.gz
  apply aarch64.patch
  HOME=/tmp cargo fetch --target=$CHOST
  tree 66a5a41ce8467221c7ff62b068c2c01c4f171f5cc1b179f4fbb921bfd300922e
}

build() {
  HOME=/tmp cargo build --bin firecracker --release
  install -s -D target/release/firecracker /dst/bin/firecracker
}
