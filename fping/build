check() {
  url https://fping.org/dist/
  match version 5.5 'fping-([0-9.]+)\.tar'
}

prepare() {
  unpack https://fping.org/dist/fping-5.5.tar.gz
  apply sigint.diff
  tree debb1cca43c548e034f3e0edacbc2a21d48ca2d3b0c1c391f5c5c6f449bcf4b0
}

build() {
  auto-config
  make install DESTDIR=/dst
  install $PKG/ping /dst/bin
}
