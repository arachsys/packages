check() {
  url https://fping.org/dist/
  match version 5.4 'fping-([0-9.]+)\.tar'
}

prepare() {
  unpack https://fping.org/dist/fping-5.4.tar.gz
  tree 5acb1361a7662a6c25b3a9fa91f4ec76a091e0b716a36466c78bbfa15bc43495
}

build() {
  auto-config
  make install DESTDIR=/dst
  install $PKG/ping /dst/bin
}
