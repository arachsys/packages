require go

check() {
  url https://github.com/junegunn/fzf/releases
  match version 0.33.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.33.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.33.0.tar.gz
  GOPATH=/tmp/go HOME=/tmp go mod vendor
  tree db8e42a11cdd442192e2f916a19928aa82ffb03f87db137eb692361519d2854e
}

build() {
  GOPATH=/tmp/go HOME=/tmp go build \
    -ldflags "-s -w -X main.version=0.33.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
