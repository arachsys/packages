require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.42.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.42.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.42.0.tar.gz
  go mod vendor
  tree 39d64d41c908b4973d88ee98cdb1212c8ff4000e983da4bd0d679e37e9a30866
}

build() {
  go build -ldflags "-s -w -X main.version=0.42.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
