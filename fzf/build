require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.59.0 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.59.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/v0.59.0.tar.gz
  go mod vendor
  tree 72528d715fa6536fff377db3b6467e72f7c0a38abc5f83392fea637665fd7517
}

build() {
  go build -ldflags "-s -w -X main.version=0.59.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
