require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.39.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.39.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.39.0.tar.gz
  go mod vendor
  tree ea1c989e39ce123a5bfe220591a852149e93db37835b7530fcb27b1e6a052220
}

build() {
  go build -ldflags "-s -w -X main.version=0.39.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
