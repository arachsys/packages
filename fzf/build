require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.44.1 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.44.1.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.44.1.tar.gz
  go mod vendor
  tree bab6927c355a69082817ed1eedf02b5516eb45ed33da6bbef2479dc0eddc3a92
}

build() {
  go build -ldflags "-s -w -X main.version=0.44.1 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
