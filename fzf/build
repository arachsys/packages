require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.41.1 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.41.1.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.41.1.tar.gz
  go mod vendor
  tree b167ed5636ff234e58a653691daab320ab6f7f239150f59cdf7887ceeaaaf4f0
}

build() {
  go build -ldflags "-s -w -X main.version=0.41.1 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
