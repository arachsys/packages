require go

check() {
  url https://github.com/junegunn/fzf/releases
  match version 0.27.3 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.27.3.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.27.3.tar.gz
  GOPATH=/tmp/go go mod vendor
  tree 622d09be81885b0b8582e38c783891ef81382b2edbc4d99478bcc005ebfec230
}

build() {
  GOPATH=/tmp/go HOME=/tmp go build \
    -ldflags "-s -w -X main.version=0.27.3 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
