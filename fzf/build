require go

check() {
  url https://github.com/junegunn/fzf/releases
  match version 0.30.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.30.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.30.0.tar.gz
  GOPATH=/tmp/go go mod vendor
  tree 119b5386a49f2bcb36019d9905de6015725ebce7ee2ebfadb6586d7f2568011e
}

build() {
  GOPATH=/tmp/go HOME=/tmp go build \
    -ldflags "-s -w -X main.version=0.30.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
