require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.52.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.52.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.52.0.tar.gz
  go mod vendor
  tree 992ceb314eb3e6a313fbcdf5c12a99e3a5e7543878de59e4a7fe37d513605e62
}

build() {
  go build -ldflags "-s -w -X main.version=0.52.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
