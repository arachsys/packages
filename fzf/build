require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.41.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.41.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.41.0.tar.gz
  go mod vendor
  tree 0fc62ffcd421480a9dfbce9c65ebedbdb581cf67cdae0f6ef9a8aae5448a1270
}

build() {
  go build -ldflags "-s -w -X main.version=0.41.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
