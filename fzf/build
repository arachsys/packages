require go

check() {
  url https://github.com/junegunn/fzf/releases
  match version 0.32.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.32.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.32.0.tar.gz
  GOPATH=/tmp/go go mod vendor
  tree a40a22746d1199582ac5d7f67d7194d93cd12804adc00bcd177c5308ff4e45a2
}

build() {
  GOPATH=/tmp/go HOME=/tmp go build \
    -ldflags "-s -w -X main.version=0.32.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
