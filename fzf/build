require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.60.0 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.60.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/v0.60.0.tar.gz
  go mod vendor
  tree 27c077bad057b02be6158438909a909b9a1070659a723f735c562c1407b7721e
}

build() {
  go build -ldflags "-s -w -X main.version=0.60.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
