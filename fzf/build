require go

check() {
  url https://github.com/junegunn/fzf/releases
  match version 0.32.1 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.32.1.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.32.1.tar.gz
  GOPATH=/tmp/go HOME=/tmp go mod vendor
  tree 40e569aa09012c31c4458809bb35d5ff993587bc5804c765ebaf1db5f6082d87
}

build() {
  GOPATH=/tmp/go HOME=/tmp go build \
    -ldflags "-s -w -X main.version=0.32.1 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
