require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.58.0 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.58.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/v0.58.0.tar.gz
  go mod vendor
  tree f1debacb500fd3baf2d99bdc8aa63f719b13aeeeb00437437ce1c122e72d28c5
}

build() {
  go build -ldflags "-s -w -X main.version=0.58.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
