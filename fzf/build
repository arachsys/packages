require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.47.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.47.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.47.0.tar.gz
  go mod vendor
  tree c0ba3948ef0219608116cb7ac195d499f33b9a473b5df8f26d440167278345d2
}

build() {
  go build -ldflags "-s -w -X main.version=0.47.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
