require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.52.1 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.52.1.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.52.1.tar.gz
  go mod vendor
  tree 4577c02f592f060b9e9c6ae112000d7ca821028d61da535ded3489f567cfe415
}

build() {
  go build -ldflags "-s -w -X main.version=0.52.1 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
