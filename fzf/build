require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.51.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.51.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.51.0.tar.gz
  go mod vendor
  tree 7e1661997f82c93c6ec1359d40f88c691fd98260bd7bb42bb81f882f00cdd57a
}

build() {
  go build -ldflags "-s -w -X main.version=0.51.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
