require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.46.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.46.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.46.0.tar.gz
  go mod vendor
  tree 65fc0d89cbbaeb20239aa5de59346c44bae27269fd6b7523984ca53b2ddea0d5
}

build() {
  go build -ldflags "-s -w -X main.version=0.46.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
