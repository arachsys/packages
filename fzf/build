require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.36.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.36.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.36.0.tar.gz
  go mod vendor
  tree 9ec687a4ecbf81ce4eb98531e5c9b524b164503cc1333ba3bfbe53646030a82f
}

build() {
  go build -ldflags "-s -w -X main.version=0.36.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
