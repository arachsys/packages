require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.49.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.49.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.49.0.tar.gz
  go mod vendor
  tree 15f8da18bdb9ff8bdad0844232df1bf26b16d99b234524e64f66371cff522f9b
}

build() {
  go build -ldflags "-s -w -X main.version=0.49.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
