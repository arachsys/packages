require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.35.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.35.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.35.0.tar.gz
  GOPATH=/tmp/go HOME=/tmp go mod vendor
  tree 8c26eba96e48f1e894e13996410210ea87dabac89445a5da105853cc559e104f
}

build() {
  GOPATH=/tmp/go HOME=/tmp go build \
    -ldflags "-s -w -X main.version=0.35.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
