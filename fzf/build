require go

check() {
  url https://github.com/junegunn/fzf/tags
  match version 0.43.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.43.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.43.0.tar.gz
  go mod vendor
  tree 91a3b368f69923bd9ef337c90b9cabbbdf1f3c9fb0f0badc87afd95e7a47b6b4
}

build() {
  go build -ldflags "-s -w -X main.version=0.43.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
