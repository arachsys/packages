require go

check() {
  url https://github.com/junegunn/fzf/releases
  match version 0.31.0 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack fzf-0.31.0.tar.gz \
    https://github.com/junegunn/fzf/archive/refs/tags/0.31.0.tar.gz
  GOPATH=/tmp/go go mod vendor
  tree 68c6214b6540879e946a34b2d70c93687773b210ad7e3993d7f442e2180bfb2b
}

build() {
  GOPATH=/tmp/go HOME=/tmp go build \
    -ldflags "-s -w -X main.version=0.31.0 -X main.revision=arachsys"
  install -D fzf /dst/bin/fzf
}
