check() {
  url https://ftp.gnu.org.uk/gnu/gawk/
  match version 5.4.0 'gawk-([0-9.]+)\.tar'
}

prepare() {
  unpack https://ftp.gnu.org.uk/gnu/gawk/gawk-5.4.0.tar.xz
  tree fab7e8c6251a96dbf4f99c6cff0e858206a5fd02fddb7ff16ec8937f96425529
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/bin/gawk{-*,bug}
}
