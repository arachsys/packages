mode autotools
enabled bootstrap || require gcc

check() {
  url https://ftp.gnu.org/gnu/gcc/
  match gcc 12.2.0 'gcc-([0-9.]+)/'

  url https://ftp.gnu.org/gnu/binutils/
  match binutils 2.39 'binutils-([0-9.]+)\.tar'

  url https://ftp.gnu.org/gnu/gmp/
  match gmp 6.2.1 'gmp-([0-9.]+)\.tar'

  url https://libisl.sourceforge.io/
  match isl 0.25 'isl-([0-9.]+)\.tar'

  url https://ftp.gnu.org/gnu/mpc/
  match mpc 1.3.1 'mpc-([0-9.]+)\.tar'

  url https://ftp.gnu.org/gnu/mpfr/
  match mpfr 4.2.0 'mpfr-([0-9.]+)\.tar'
}

prepare() {
  unpack https://ftp.gnu.org/gnu/gcc/gcc-12.2.0/gcc-12.2.0.tar.xz
  unpack -d bu https://ftp.gnu.org/gnu/binutils/binutils-2.39.tar.xz
  unpack -d gmp https://ftp.gnu.org/gnu/gmp/gmp-6.2.1.tar.xz
  unpack -d isl https://libisl.sourceforge.io/isl-0.25.tar.xz
  unpack -d mpc https://ftp.gnu.org/gnu/mpc/mpc-1.3.1.tar.gz
  unpack -d mpfr https://ftp.gnu.org/gnu/mpfr/mpfr-4.2.0.tar.xz

  ln -s bu/{bfd,binutils,gas,gprof,ld,libctf,opcodes} .

  apply execinfo.diff
  apply isl.diff
  apply musl.diff
  apply no-toollib.diff
  apply paths.diff
  apply pure64.diff
  apply rpath.diff

  tree a4aac3caa11c22175e2cd176d04b19cc63e484e6b88947db4ab279cf23e18dcd
}

pre-config() {
  # Work around a bug where makeinfo is required unconditionally:
  sed -i 's/\(^INFO_DEPS *=\).*/\1/' {bfd,gas}/Makefile.in
}

config-extra --disable-bootstrap --disable-libsanitizer --disable-libssp \
  --disable-libstdc++-pch --disable-multilib --disable-symvers \
  --disable-werror --enable-__cxa_atexit --enable-clocale=gnu \
  --enable-default-{pie,ssp} --enable-deterministic-archives \
  --enable-languages=c,c++,lto --enable-linker-build-id --enable-plugins \
  --enable-shared --enable-threads=posix --without-local-prefix \
  --with-gxx-include-dir='${prefix}/lib/include/c++/${gcc_version}' \
  --with-isl --with-lib-path=/lib:/lib/shared:/lib/static \
  --with-linker-hash-style=gnu --with-native-system-header-dir=/lib/include \
  --with-slibdir='${prefix}/lib/shared' --with-system-zlib \
  libat_cv_have_ifunc=no

if ! ${CC:-cc} --version | grep -i -q -F gcc; then
  config-extra --without-isl
fi

case "$CHOST" in
  aarch64-*)
    config-extra --with-arch=armv8-a --with-abi=lp64
    ;;
  armv7-*)
    config-extra --with-abi=aapcs-linux --with-arch=armv7-a \
      --with-fpu=vfpv3-d16 --with-float=hard --with-mode=thumb \
      --with-tune=generic-armv7-a
    ;;
esac

compile-extra tooldir='${prefix}'
install-extra tooldir='${prefix}'

post-install() {
  local TARGET=$(cd /dst/lib/gcc && echo *)
  local VERSION=$(cd /dst/lib/gcc/$TARGET && echo *)
  cp include/libiberty.h /dst/lib/include/
  mkdir -p /dst/lib/bfd-plugins
  ln -s ../gcc/$TARGET/$VERSION/liblto_plugin.so /dst/lib/bfd-plugins/
  mv /dst/lib/**/*.spec /dst/lib/gcc/$TARGET/$VERSION/
  rm -f /dst/bin/{$TARGET-*,ld.bfd,gccbug} /dst/**/*.py
  ln -s gcc /dst/bin/cc

  image gcc-shared contains /dst/lib/{,shared/}lib{atomic,gcc_s,stdc++}.so*
  image - requires gcc-shared
}
