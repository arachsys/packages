enable unstripped
require go

check() {
  url https://golang.org/dl/
  match version 1.19.3 'go([0-9.]+)\.src\.tar'
}

prepare() {
  unpack https://golang.org/dl/go1.19.3.src.tar.gz
  apply fmt.diff
  apply paths.diff
  tree f7e13c5fb8a30dcb12557f4f6731e1c5430b931517807152dc755e1312547b09
}

build() {
  CC=cc GO_LDSO=/lib/ld.so GOAMD64=v2 GOARM=7 GOCACHE=/src/pkg/obj/go-build \
    GOROOT_FINAL=/lib/go bash -c 'cd src && source make.bash --no-banner'

  mkdir -p /dst/{bin,lib/go}
  cp -d -R bin pkg src /dst/lib/go
  ln -s ../lib/go/bin/{go,gofmt} /dst/bin/

  rm -f -r /dst/lib/go/{pkg/obj,pkg/bootstrap,pkg/tool/*/api}
  rm -f -r /dst/lib/go/src/**/{*_test.go,*.bat,*.rc,testdata/}
  strip --strip-unneeded /dst/lib/go/{bin/*,pkg/tool/*/*}
  chmod a+x /dst/lib/go/**/*.{bash,sh}
}
