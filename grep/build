mode autotools

check() {
  url https://ftp.gnu.org/gnu/grep/
  match version 3.9 'grep-([0-9.]+)\.tar'
}

prepare() {
  unpack https://ftp.gnu.org/gnu/grep/grep-3.9.tar.xz
  tree f9bd17df149f9c0f8fe559660a255408903595123993a00a77f5a4e31a37ec4d
}

post-install() {
  printf '#!/bin/sh\nexec grep -E "$@"\n' >/dst/bin/egrep
  printf '#!/bin/sh\nexec grep -F "$@"\n' >/dst/bin/fgrep
  chmod a+x /dst/bin/egrep /dst/bin/fgrep
}
