mode autotools

check() {
  url https://ftp.gnu.org/gnu/grep/
  match version 3.10 'grep-([0-9.]+)\.tar'
}

prepare() {
  unpack https://ftp.gnu.org/gnu/grep/grep-3.10.tar.xz
  tree cf4a3ce0a7030364fb7b6d705d0debed423501068c02dcd4feaab2ae9718ead7
}

post-install() {
  printf '#!/bin/sh\nexec grep -E "$@"\n' >/dst/bin/egrep
  printf '#!/bin/sh\nexec grep -F "$@"\n' >/dst/bin/fgrep
  chmod a+x /dst/bin/egrep /dst/bin/fgrep
}
