require go

check() {
  url https://github.com/tomnomnom/gron/releases
  match version 0.6.1 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack gron-0.6.1.tar.gz \
    https://github.com/tomnomnom/gron/archive/refs/tags/v0.6.1.tar.gz
  GOPATH=/tmp/go go mod vendor
  tree 5d7c64c13c6e40090c3816b2257616e9d05f4034274ebbccb7b4ef63cc035915
}

build() {
  GOPATH=/tmp/go HOME=/tmp go build
  install -D gron /dst/bin/gron
}
