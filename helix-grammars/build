require git helix

prepare() {
  XDG_CONFIG_HOME=/src hx -g fetch
  find . -xtype l -delete -or -type l -lname '/*' -delete
  maybe rm -r -- helix/runtime/grammars/sources/*/.git
  apply fixes.diff
  tree 80237223d28f451e146a5b38add1fb1bafb225d8a54c9419ae15fcf0c2acc5ae
}

build() {
  XDG_CONFIG_HOME=/src hx -g build
  mkdir -p /dst/lib/helix/runtime/grammars
  install -s helix/runtime/grammars/*.so /dst/lib/helix/runtime/grammars
}
