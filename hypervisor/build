require rust

check() {
  url https://github.com/cloud-hypervisor/cloud-hypervisor/tags
  match version 48.0 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack cloud-hypervisor-48.0.tar.xz \
    https://github.com/cloud-hypervisor/cloud-hypervisor/releases/download/v48.0/cloud-hypervisor-v48.0.tar.xz
  apply cosmetic.diff
  apply discard.diff
  apply features.diff
  apply hotplug.diff
  apply tapip.diff
  tree beafc1b077766607682ed6c3d4837b02b5ddfb8558084aaebf4e9a806a89f9f2
}

build() {
  cargo build --release
  install -s -D target/release/cloud-hypervisor /dst/bin/hyper
  install -s -D target/release/ch-remote /dst/bin/hyper-remote
}
