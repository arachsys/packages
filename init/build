check() {
  url https://github.com/arachsys/init/tags
  match version 2.15 'init-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/init/archive/init-2.15.tar.gz
  apply sync.diff
  tree a8251e147b12748d7988881eb9c810c2fca6e45b40dcd380b905f5b79eb99acd
}

build() {
  make install CC=cc DESTDIR=/dst PREFIX=
  cp /src/examples/bin/* /dst/bin/
}
