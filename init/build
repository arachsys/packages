check() {
  url https://github.com/arachsys/init/tags
  match version 2.7 'init-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/init/archive/init-2.7.tar.gz
  apply sync.diff
  tree d15b2b5ace6785e6750821b6f871c1fb70b9d35c4409064fe9843f19761dbc67
}

build() {
  make install CC=cc DESTDIR=/dst PREFIX=
  cp /src/examples/bin/* /dst/bin/
}
