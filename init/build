check() {
  url https://github.com/arachsys/init/tags
  match version 2.17 'init-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/init/archive/init-2.17.tar.gz
  apply sync.diff
  tree 09ab4ca7ef56d87e6145cdf66c6e10ed4ed42888cdcc1f918a97a79b9d64a5c3
}

build() {
  make install CC=cc DESTDIR=/dst PREFIX=
  cp /src/examples/bin/* /dst/bin/
}
