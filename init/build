check() {
  url https://github.com/arachsys/init/tags
  match version 2.12 'init-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/init/archive/init-2.12.tar.gz
  apply sync.diff
  tree 3eabefb54d089cafba74a21f6c019f46a203591dea23984db35b9b7b33612b32
}

build() {
  make install CC=cc DESTDIR=/dst PREFIX=
  cp /src/examples/bin/* /dst/bin/
}
