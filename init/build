check() {
  url https://github.com/arachsys/init/tags
  match version 2.4 'init-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/init/archive/init-2.4.tar.gz
  tree b200314ad2154d6342bbdbf6671e4b99516454b5f9fe925695f584b10383c85d
}

build() {
  make install CC=cc DESTDIR=/dst PREFIX=
  cp /src/examples/bin/* /dst/bin/
}
