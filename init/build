check() {
  url https://github.com/arachsys/init/tags
  match version 2.2 'init-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/init/archive/init-2.2.tar.gz
  tree 0b09c851f213277c122628b4525e1a3b32ce5ef90ecbfc9fc2320c460ffa59b9
}

build() {
  make install CC=cc DESTDIR=/dst PREFIX=
  cp /src/examples/bin/* /dst/bin/
}
