check() {
  url https://github.com/arachsys/init/tags
  match version 2.8 'init-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/init/archive/init-2.8.tar.gz
  apply sync.diff
  tree 1afa5cedf6f9582a39a75f4b5860df899db95dbebff76ebaed63e79f71962f0d
}

build() {
  make install CC=cc DESTDIR=/dst PREFIX=
  cp /src/examples/bin/* /dst/bin/
}
