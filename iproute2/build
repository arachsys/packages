require bison flex

check() {
  url https://www.kernel.org/pub/linux/utils/net/iproute2/
  match version 6.6.0 'iproute2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/utils/net/iproute2/iproute2-6.6.0.tar.xz
  apply includes.diff
  apply nocompat.diff
  apply paths.diff
  apply unspec.diff
  tree cbe4a6a7e2f75a090a65e020d409e12562bffc44f6dfeb2b143d7098c6f76e5f
}

build() {
  CC=cc PKG_CONFIG=/bin/false /src/configure --prefix=
  make install CC=cc DESTDIR=/dst
  rm -f -r /dst/bin/{ifcfg,routef,routel,rtpr} /dst/lib/bash-completion
}
