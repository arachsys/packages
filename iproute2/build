require bison flex

check() {
  url https://www.kernel.org/pub/linux/utils/net/iproute2/
  match version 6.7.0 'iproute2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/utils/net/iproute2/iproute2-6.7.0.tar.xz
  apply includes.diff
  apply nocompat.diff
  apply paths.diff
  apply unspec.diff
  tree bd4fec3276fd2f3b80db85730218db4c2cb471be72697d2a0e48b48daf69ade2
}

build() {
  CC=cc PKG_CONFIG=/bin/false /src/configure --prefix= --color=auto
  make install CC=cc DESTDIR=/dst
  rm -f -r /dst/bin/{ifcfg,routef,routel,rtpr} /dst/lib/bash-completion
}
