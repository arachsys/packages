require bison flex

check() {
  url https://www.kernel.org/pub/linux/utils/net/iproute2/
  match version 6.18.0 'iproute2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/utils/net/iproute2/iproute2-6.18.0.tar.xz
  apply headers.diff
  apply nocompat.diff
  apply paths.diff
  apply unspec.diff
  tree 6742a6c9013495b46d75e71d3f440f6959d5a78340776a3852577a05e13ca374
}

build() {
  CC=cc PKG_CONFIG=/bin/false /src/configure --prefix= --color=auto
  make install CC=cc DESTDIR=/dst
  sed -e 's/#.*//' -e 's/[[:blank:]]\+/ /g' -e 's/^ //' -e 's/ $//' \
      -e '/^$/d' -i /dst/lib/{iproute2,tc}/*
  rm -f -r /dst/bin/{ifcfg,routef,routel,rtpr} /dst/lib/bash-completion
}
