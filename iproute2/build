require bison flex

check() {
  url https://www.kernel.org/pub/linux/utils/net/iproute2/
  match version 6.1.0 'iproute2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/utils/net/iproute2/iproute2-6.1.0.tar.xz
  apply includes.diff
  apply paths.diff
  tree 57eaf49a1513d0df7c6c38028d20bd10281357e00e21ec95c225013b2d2b890d
}

build() {
  CC=cc PKG_CONFIG=/bin/false /src/configure
  make install CC=cc DESTDIR=/dst PREFIX= DATADIR=/lib HDRDIR=/lib/include \
    LIBDIR=/lib SBINDIR=/bin {DBM,KERNEL}_INCLUDE=/lib/include
  rm -f -r /dst/bin/{ifcfg,routef,routel,rtpr} /dst/lib/bash-completion
}
