require bison flex

check() {
  url https://www.kernel.org/pub/linux/utils/net/iproute2/
  match version 6.17.0 'iproute2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/utils/net/iproute2/iproute2-6.17.0.tar.xz
  apply headers.diff
  apply nocompat.diff
  apply paths.diff
  apply unspec.diff
  tree 4c800617ae5216428aed4005e7aa6b99c69958320c63535b60964a4c221cc1b6
}

build() {
  CC=cc PKG_CONFIG=/bin/false /src/configure --prefix= --color=auto
  make install CC=cc DESTDIR=/dst
  sed -e 's/#.*//' -e 's/[[:blank:]]\+/ /g' -e 's/^ //' -e 's/ $//' \
      -e '/^$/d' -i /dst/lib/{iproute2,tc}/*
  rm -f -r /dst/bin/{ifcfg,routef,routel,rtpr} /dst/lib/bash-completion
}
