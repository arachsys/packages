require bison flex

check() {
  url https://www.kernel.org/pub/linux/utils/net/iproute2/
  match version 6.19.0 'iproute2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/utils/net/iproute2/iproute2-6.19.0.tar.xz
  apply headers.diff
  apply nocompat.diff
  apply paths.diff
  apply unspec.diff
  tree 3d62f354d6a6fa1029ef125b68f6e302dc36e197ea1ac8cfc633fa54ec22abfd
}

build() {
  CC=cc PKG_CONFIG=/bin/false /src/configure --prefix= --color=auto
  make install CC=cc DESTDIR=/dst
  sed -e 's/#.*//' -e 's/[[:blank:]]\+/ /g' -e 's/^ //' -e 's/ $//' \
      -e '/^$/d' -i /dst/lib/{iproute2,tc}/*
  rm -f -r /dst/bin/{ifcfg,routef,routel,rtpr} /dst/lib/bash-completion
}
