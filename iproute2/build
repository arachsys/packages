require bison flex

check() {
  url https://www.kernel.org/pub/linux/utils/net/iproute2/
  match version 6.9.0 'iproute2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/utils/net/iproute2/iproute2-6.9.0.tar.xz
  apply includes.diff
  apply nocompat.diff
  apply paths.diff
  apply unspec.diff
  tree a4d3e0cc57b3bb748a42f85c0f16589e91caee95e081d1a9bfbc3e847837595e
}

build() {
  CC=cc PKG_CONFIG=/bin/false /src/configure --prefix= --color=auto
  make install CC=cc DESTDIR=/dst
  sed -e 's/#.*//' -e 's/[[:blank:]]\+/ /g' -e 's/^ //' -e 's/ $//' \
      -e '/^$/d' -i /dst/lib/{iproute2,tc}/*
  rm -f -r /dst/bin/{ifcfg,routef,routel,rtpr} /dst/lib/bash-completion
}
