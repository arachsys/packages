enable setuid

check() {
  url https://github.com/iputils/iputils/tags
  match iputils 20231222 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack iputils-20231222.tar.gz \
    https://github.com/iputils/iputils/archive/refs/tags/20231222.tar.gz
  apply usage.diff
  tree 3a56f528e64be9be673c30a2984187639888ff9731276d8abbcf8b6b38d403ec
}

build() {
  echo '#define PACKAGE_NAME "iputils"' >config.h
  sed 's/@VCS_TAG@/20231222/' git-version.h.meson >>config.h
  cc -Os -Wall -DHAVE___FPENDING -DHAVE_GETRANDOM -I. -include config.h \
    iputils_common.c md5.c ping/*.c -lm -lresolv -o ping/ping
  install -s -t /dst/bin -D ping/ping
  install -t /dst/bin -D /pkg/await-net
}
