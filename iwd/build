mode autotools

check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.6 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.6.tar.xz
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply paths.diff
  apply syslog.diff
  tree 1700ff4d24bdb9b088ea5a450cc150a0464dcaa8cd30cd7ebe168f24c82f5c4f
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services \
  READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline

post-install() {
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
