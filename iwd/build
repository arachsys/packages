mode autotools

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-1.15.tar.xz
  apply clang.patch
  apply dbus.patch
  apply paths.patch
  apply resolve.patch
  apply syslog.patch
  tree 2723af44ff76eac70f2729b26c72ae118d5d4d047e77e4631c098671c21bcf72
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services

post-install() {
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
