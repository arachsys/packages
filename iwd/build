check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.14 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.14.tar.xz
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply musl.diff
  apply paths.diff
  apply syslog.diff
  tree 734b7be7dd4d0aeb0f3d36d6186aabbaefa3b368753dd3ed25e096f91f1b3338
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
