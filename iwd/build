mode autotools

check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 1.16 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-1.16.tar.xz
  apply clang.patch
  apply dbus.patch
  apply ipv6.patch
  apply paths.patch
  apply resolve.patch
  apply syslog.patch
  tree 807ef68875187f06dfaf14bee3c1a6efc87a4ed43594ff17abda39525919fbac
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services

post-install() {
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
