check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 3.10 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-3.10.tar.xz
  apply bridge.diff
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply paths.diff
  apply slaac.diff
  apply syslog.diff
  tree b6e83749db9d70ad970e43b0e1d33db7eabca3a2f90c679d708da965f12df0e3
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
