check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.15 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.15.tar.xz
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply musl.diff
  apply paths.diff
  apply syslog.diff
  tree 66e2e471d20fc9e486d44e2599a30a765893e69aec947598f227815bbec651f8
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
