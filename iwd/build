mode autotools

check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 1.18 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-1.18.tar.xz
  apply clang.diff
  apply dbus.diff
  apply ipv6.diff
  apply paths.diff
  apply resolve.diff
  apply syslog.diff
  tree b43634fc3d06f2b3f6553a5ce56da0a600541059cec6e7e2f1b9cefd6665f9e3
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services

post-install() {
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
