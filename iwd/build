check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.8 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.8.tar.xz
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply paths.diff
  apply syslog.diff
  tree e6d4b418911fdc22afd34bd8ce4513005c18741aceb2235000a5ea654036992d
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
