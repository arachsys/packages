mode autotools

check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.3 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.3.tar.xz
  apply clang.diff
  apply dbus.diff
  apply paths.diff
  apply resolve.diff
  apply syslog.diff
  tree 729607de79e6a34a569701cbe618ce15bbbb94ec1f321f089bc799d8635378cb
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services

post-install() {
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
