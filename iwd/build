mode autotools

check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.0 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.0.tar.xz
  apply clang.diff
  apply dbus.diff
  apply paths.diff
  apply resolve.diff
  apply syslog.diff
  tree 079b02d1fb84b9020b5d5899b07c050b168a89001f533393c9ec8f51d9e9f964
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services

post-install() {
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
