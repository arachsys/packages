mode autotools

check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.1 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.1.tar.xz
  apply clang.diff
  apply dbus.diff
  apply paths.diff
  apply resolve.diff
  apply syslog.diff
  tree 0916668f55a796d04c559b765fe12d78d58359cd291f6120e984adde7e42f303
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services

post-install() {
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
