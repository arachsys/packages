check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 3.1 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-3.1.tar.xz
  apply bridge.diff
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply paths.diff
  apply slaac.diff
  apply syslog.diff
  tree 8172704ec25b04e78b8be1f93622cd30635132a34c22bbe11b7ab1e3b3f4b27f
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
