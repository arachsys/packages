check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.12 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.12.tar.xz
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply musl.diff
  apply paths.diff
  apply syslog.diff
  tree f3023e16f43fd437031f544ac512fe24227e5f13e87d91f1e8c0ffd6bd94ecb2
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
