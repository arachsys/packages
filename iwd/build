check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.17 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.17.tar.xz
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply paths.diff
  apply syslog.diff
  tree 8738dc9f3f13ea697afb36cd2ed28724475cbbb6e1936fa7fb06fd50d66d8f8c
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
