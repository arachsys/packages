check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.21 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.21.tar.xz
  apply bridge.diff
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply paths.diff
  apply slaac.diff
  apply syslog.diff
  tree 0e877538f6fd8d5d40b7dbf999060937d9ca7a1ac9d8fe43eacaaaeb7ff5ea4b
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
