check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 3.7 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-3.7.tar.xz
  apply bridge.diff
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply paths.diff
  apply slaac.diff
  apply syslog.diff
  tree 41940f7674e292dfe177429fae8d0ea7ba522c51c4ac37b056bc0caf86e4a6f6
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
