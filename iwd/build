mode autotools

check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 1.24 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-1.24.tar.xz
  apply clang.diff
  apply dbus.diff
  apply ipv6.diff
  apply paths.diff
  apply resolve.diff
  apply syslog.diff
  tree 433370fd168452ab84615dcf8b07fae699f4e82f52279785aabc8c44a4dd3819
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services

post-install() {
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
