check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.13 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.13.tar.xz
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply musl.diff
  apply paths.diff
  apply syslog.diff
  tree e43a38507fb8fdca35a31094a58c1ec4ced058db1735c185d91e23e24067f070
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
