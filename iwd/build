mode autotools

check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.2 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.2.tar.xz
  apply clang.diff
  apply dbus.diff
  apply overflow.diff
  apply paths.diff
  apply resolve.diff
  apply syslog.diff
  tree 9308ba7da3763fbbb93026a822828a3e9f2dfc58ba09c2605c3e369b5b9528fa
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services

post-install() {
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
