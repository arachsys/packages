check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.10 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.10.tar.xz
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply musl.diff
  apply paths.diff
  apply syslog.diff
  tree 59d2562fe2fda1a040759f897137a35f49c9c75d4a54b55904d3d3c27406d2ed
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
