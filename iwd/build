check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 2.18 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.18.tar.xz
  apply bridge.diff
  apply clang.diff
  apply defaults.diff
  apply dbus.diff
  apply paths.diff
  apply slaac.diff
  apply syslog.diff
  tree d9ec7159c21d305c54f1b4a74b9173bedc2eb77d5a7ff9597513fea46f86d935
}

build() {
  auto-config --disable-dbus-policy --disable-systemd-service \
    --with-dbus-busdir=/lib/dbus/system-services \
    READLINE_CFLAGS=-I/lib/include READLINE_LIBS=-lreadline
  make install DESTDIR=/dst
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
