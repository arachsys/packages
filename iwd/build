mode autotools

check() {
  url https://mirrors.edge.kernel.org/pub/linux/network/wireless/
  match version 1.26 'iwd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-1.26.tar.xz
  apply clang.diff
  apply dbus.diff
  apply ipv6.diff
  apply paths.diff
  apply resolve.diff
  apply syslog.diff
  tree bdf06ebe881db6e208224f6712396c455830973448d7fa641187c5750d379f9f
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services

post-install() {
  mv /dst/{lib,bin}/iwd
  cp /pkg/resolvconf /dst/bin/
}
