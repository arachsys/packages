check() {
  url https://github.com/mawww/kakoune/tags
  match version 2023.07.29 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2023.07.29.tar.gz \
     https://github.com/mawww/kakoune/archive/v2023.07.29.tar.gz
  apply balance.diff
  apply clang.diff
  apply hide.diff
  apply highlight.diff
  apply news.diff
  apply palette.diff
  apply paths.diff
  apply sync.diff
  apply tabs.diff
  apply windowing.diff
  find -xtype l -delete
  tree 8039498f8fcf25e3768ba9fa149d3b65179fbdf01e5594a8c82ed66bcedfcaa0
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2023.07.29
  find /dst/lib/kak/{colors,kakrc,rc} -type f -exec sed -E -e '/^\s*#/d' \
    -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
    -e 's/\s+$//' -e '/./,/^$/p' -i -n {} +
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e '${/^$/d}' -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' "$FILE" \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
