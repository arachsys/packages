check() {
  url https://github.com/mawww/kakoune/tags
  match version 2023.08.05 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2024.02.10.tar.gz \
     https://github.com/mawww/kakoune/archive/8d60e194.tar.gz
  apply init.diff
  apply news.diff
  apply palette.diff
  apply paths.diff
  apply perl.diff
  apply tabs.diff
  apply windowing.diff
  find -xtype l -delete
  tree e91187d72fef69a9df14b1673afb9a357908a3bfa5336eb2491061b869680223
}

build() {
  if [[ $(c++ --version) == *clang* ]]; then
    COMPILER=clang++
    if enabled static; then
      LIBS='LDFLAGS+=-static LIBS+=-lunwind LIBS+=-lc++abi'
    fi
  else
    COMPILER=g++
    if enabled static; then
      LIBS='LDFLAGS+=-static'
    fi
  fi

  make install CXX=$COMPILER DESTDIR=/dst PREFIX= version=2024.02.10 $LIBS
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' -e '/^\s*#/d' \
        -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
        -e 's/\s+$//' -e '/./,/^$/p' -n "$FILE" | sed '${/^$/d}' \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
  rm -f /dst/lib/kak/rc/{*/*.pl,tools/{git,man,patch}.kak}
}
