check() {
  url https://github.com/mawww/kakoune/tags
  match version 2022.10.31 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2023.05.04.tar.gz \
     https://github.com/mawww/kakoune/archive/2adc81c4.tar.gz
  apply balance.diff
  apply clang.diff
  apply highlight.diff
  apply news.diff
  apply palette.diff
  apply paths.diff
  apply tabs.diff
  apply utf8.diff
  apply windowing.diff
  tree da2a0718a67e38c28d7b6297cc816a017f8ec94bb429cfe44d3ce987e7fa170c
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2023.05.04
  find /dst/lib/kak/{colors,kakrc,rc} -type f -exec sed -E -e '/^\s*#/d' \
    -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
    -e 's/\s+$//' -e '/./,/^$/p' -i -n {} +
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e '${/^$/d}' -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' "$FILE" \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
