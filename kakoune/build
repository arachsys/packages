check() {
  url https://github.com/mawww/kakoune/releases
  match version 2021.10.28 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack kakoune-2021.10.28.tar.gz \
    https://github.com/mawww/kakoune/archive/v2021.10.28.tar.gz
  apply paths.diff
  tree d9e1afaac2ee345acb56891a5a38114f81ae2a7f2b85d0f4c329b5642ba020f1
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2021.10.28
}
