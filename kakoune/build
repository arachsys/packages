check() {
  url https://github.com/mawww/kakoune/tags
  match version 2022.10.31 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2023.05.10.tar.gz \
     https://github.com/mawww/kakoune/archive/a69be628.tar.gz
  apply balance.diff
  apply clang.diff
  apply debug.diff
  apply highlight.diff
  apply news.diff
  apply palette.diff
  apply paths.diff
  apply tabs.diff
  apply windowing.diff
  tree 345a536846d8f11bca78715594763e434252885a2c3586a4e0def5f1de0267ff
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2023.05.10
  find /dst/lib/kak/{colors,kakrc,rc} -type f -exec sed -E -e '/^\s*#/d' \
    -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
    -e 's/\s+$//' -e '/./,/^$/p' -i -n {} +
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e '${/^$/d}' -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' "$FILE" \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
