check() {
  url https://github.com/mawww/kakoune/tags
  match version 2022.10.31 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2023.06.21.tar.gz \
     https://github.com/mawww/kakoune/archive/e06e409d.tar.gz
  apply balance.diff
  apply clang.diff
  apply hide.diff
  apply highlight.diff
  apply news.diff
  apply palette.diff
  apply paths.diff
  apply sync.diff
  apply tabs.diff
  apply windowing.diff
  find -xtype l -delete
  tree 7468b464bf4aea7006e723bd8d3085afeb0e1a96953c0576e7f59e78c5bf0579
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2023.06.21
  find /dst/lib/kak/{colors,kakrc,rc} -type f -exec sed -E -e '/^\s*#/d' \
    -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
    -e 's/\s+$//' -e '/./,/^$/p' -i -n {} +
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e '${/^$/d}' -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' "$FILE" \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
