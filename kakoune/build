check() {
  url https://github.com/mawww/kakoune/tags
  match version 2022.10.31 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2022.11.09.tar.gz \
     https://github.com/mawww/kakoune/archive/91d45a10.tar.gz
  apply balance.diff
  apply highlight.diff
  apply palette.diff
  apply paths.diff
  apply tabs.diff
  apply windowing.diff
  tree 82f199615e4ebc49bb29a6b5b557217453cc4a4c57414bb74804b68f9ae64670
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2022.10.19
  find /dst/lib/kak/{colors,kakrc,rc} -type f -exec sed -E -e '/^\s*#/d' \
    -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
    -e 's/\s+$//' -e '/./,/^$/p' -i -n {} +
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e '${/^$/d}' -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' "$FILE" \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
