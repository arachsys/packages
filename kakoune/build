check() {
  url https://github.com/mawww/kakoune/releases
  match version 2021.08.28 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack kakoune-2021.08.28.tar.gz \
    https://github.com/mawww/kakoune/archive/v2021.08.28.tar.gz
  apply paths.diff
  tree 744f254868dc192dd691048fbf5f8a5b6545433efbe9b2d0ad9f5123db022bf1
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2021.08.28
}
