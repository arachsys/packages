check() {
  url https://github.com/mawww/kakoune/tags
  match version 2022.10.31 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2023.07.05.tar.gz \
     https://github.com/mawww/kakoune/archive/e3122ab2.tar.gz
  apply balance.diff
  apply clang.diff
  apply hide.diff
  apply highlight.diff
  apply news.diff
  apply palette.diff
  apply paths.diff
  apply sync.diff
  apply tabs.diff
  apply windowing.diff
  find -xtype l -delete
  tree 8ee618ad4fe7d3639edde88ae8614bf309520e0833e182e47dfc9f3f4a92cf51
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2023.07.05
  find /dst/lib/kak/{colors,kakrc,rc} -type f -exec sed -E -e '/^\s*#/d' \
    -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
    -e 's/\s+$//' -e '/./,/^$/p' -i -n {} +
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e '${/^$/d}' -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' "$FILE" \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
