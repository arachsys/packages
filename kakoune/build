check() {
  url https://github.com/mawww/kakoune/tags
  match version 2023.08.05 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2023.11.16.tar.gz \
     https://github.com/mawww/kakoune/archive/b10a935b.tar.gz
  apply balance.diff
  apply hide.diff
  apply highlight.diff
  apply init.diff
  apply news.diff
  apply palette.diff
  apply paths.diff
  apply perl.diff
  apply sync.diff
  apply tabs.diff
  apply warnings.diff
  apply windowing.diff
  find -xtype l -delete
  tree becaa1b7b8ae8928524876e4e655f405445f692171d89ed5a67f88d4f7af779b
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2023.11.03
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' -e '/^\s*#/d' \
        -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
        -e 's/\s+$//' -e '/./,/^$/p' -n "$FILE" | sed '${/^$/d}' \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
