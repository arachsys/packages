check() {
  url https://github.com/mawww/kakoune/releases
  match version 2021.11.08 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack kakoune-2021.11.08.tar.gz \
    https://github.com/mawww/kakoune/archive/v2021.11.08.tar.gz
  apply highlight.diff
  apply modeline.diff
  apply paths.diff
  apply tabs.diff
  apply windowing.diff
  tree c19423ccbf10afedafb3829e0d21e3e9949e15cfdbd8aa08b8ed124b731737d0
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2021.11.08
  find /dst/lib/kak/{colors,kakrc,rc} -type f -exec sed -E -e '/^\s*#/d' \
    -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
    -e 's/\s+$//' -e '/./,/^$/p' -i -n {} +
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e '${/^$/d}' -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' "$FILE" \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
