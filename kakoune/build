check() {
  url https://github.com/mawww/kakoune/tags
  match version 2023.08.05 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2024.01.17.tar.gz \
     https://github.com/mawww/kakoune/archive/06743119.tar.gz
  apply balance.diff
  apply gawk.diff
  apply init.diff
  apply news.diff
  apply palette.diff
  apply paths.diff
  apply tabs.diff
  apply windowing.diff
  find -xtype l -delete
  tree 086903460e586e6f58159874cea30acb766b2ea778ad9ff9a6a1fb8d584bda19
}

build() {
  if [[ $(c++ --version) == *clang* ]]; then
    COMPILER=clang++
    if enabled static; then
      LIBS='LDFLAGS+=-static LIBS+=-lunwind LIBS+=-lc++abi'
    fi
  else
    COMPILER=g++
    if enabled static; then
      LIBS='LDFLAGS+=-static'
    fi
  fi

  make install CXX=$COMPILER DESTDIR=/dst PREFIX= version=2024.01.17 $LIBS
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' -e '/^\s*#/d' \
        -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
        -e 's/\s+$//' -e '/./,/^$/p' -n "$FILE" | sed '${/^$/d}' \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
