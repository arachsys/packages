check() {
  url https://github.com/mawww/kakoune/tags
  match version 2022.10.31 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2023.03.13.tar.gz \
     https://github.com/mawww/kakoune/archive/019fbc54.tar.gz
  apply balance.diff
  apply clang.diff
  apply highlight.diff
  apply palette.diff
  apply paths.diff
  apply tabs.diff
  apply windowing.diff
  tree dc823189278180a7e357f7d67ccda2568a2767ee92ea838c1395bc49db4fd970
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2023.03.13
  find /dst/lib/kak/{colors,kakrc,rc} -type f -exec sed -E -e '/^\s*#/d' \
    -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
    -e 's/\s+$//' -e '/./,/^$/p' -i -n {} +
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e '${/^$/d}' -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' "$FILE" \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
