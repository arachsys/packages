check() {
  url https://github.com/mawww/kakoune/tags
  match version 2023.08.05 'tags/v([0-9.]+)\.tar'
}

prepare() {
   unpack kakoune-2023.12.02.tar.gz \
     https://github.com/mawww/kakoune/archive/84ecd41d.tar.gz
  apply balance.diff
  apply gawk.diff
  apply hide.diff
  apply highlight.diff
  apply init.diff
  apply news.diff
  apply palette.diff
  apply paths.diff
  apply tabs.diff
  apply warnings.diff
  apply windowing.diff
  find -xtype l -delete
  tree daeaa207bdde4b555d9f76059d18248b7a86359e32d6e46a841ad81fa884b022
}

build() {
  if enabled static; then
    if [[ $(c++ --version) == *clang* ]]; then
      LIBS='LDFLAGS+=-static LIBS+=-lunwind LIBS+=-lc++abi'
    else
      LIBS='LDFLAGS+=-static'
    fi
  fi

  make install CXX=c++ DESTDIR=/dst PREFIX= version=2023.12.02 $LIBS
  find /dst/lib/kak/{colors,kakrc,rc} -type f | while read FILE; do
    sed -E -e 's/rgb:[[:xdigit:]]{2}{3,4}/\L&/g' -e '/^\s*#/d' \
        -e "s/^(([^'\"#]*|'[^']*'|\"([^\"\\]|\\\\.)*\")*)\\s+#\\s.*/\\1/" \
        -e 's/\s+$//' -e '/./,/^$/p' -n "$FILE" | sed '${/^$/d}' \
      | expand -i > "$FILE.tmp" && mv -f "$FILE.tmp" "$FILE"
  done
}
