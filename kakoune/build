check() {
  url https://github.com/mawww/kakoune/releases
  match version 2021.11.08 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack kakoune-2021.11.08.tar.gz \
    https://github.com/mawww/kakoune/archive/v2021.11.08.tar.gz
  apply modeline.diff
  apply paths.diff
  tree 65a74b8e3145a09dc2e491f6d8719334363a09f129ba00e155530bc55307cc05
}

build() {
  make install CXX=c++ DESTDIR=/dst PREFIX= version=2021.11.08
}
