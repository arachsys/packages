mode autotools

check() {
  url http://www.greenwoodsoftware.com/less/download.html
  match version 608 'less-([0-9.]+)(-beta)?\.tar'
}

prepare() {
  unpack http://www.greenwoodsoftware.com/less/less-608-beta.tar.gz
  tree 6f754a576d3cb86272274d1d12bd386d2bd384d7a0aab3277dda98fa8189e777
}

post-config() {
  sed -i '/#define LESSHISTFILE/s/".*"/"-"/' defines.h
}

post-install() {
  rm -f /dst/bin/lesskey /dst/lib/man/man1/lesskey.1
  ln -s less /dst/bin/more
}
