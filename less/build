mode autotools

check() {
  url http://www.greenwoodsoftware.com/less/download.html
  match version 603 'less-([0-9.]+)(-beta)?\.tar'
}

prepare() {
  unpack http://www.greenwoodsoftware.com/less/less-603-beta.tar.gz
  tree 9aa2782e31869f4209009a9db79beb2f248c910dfc3b26cc7adcceabf32ddfdf
}

post-config() {
  sed -i '/#define LESSHISTFILE/s/".*"/"-"/' defines.h
}

post-install() {
  rm -f /dst/bin/lesskey /dst/lib/man/man1/lesskey.1
  ln -s less /dst/bin/more
}
