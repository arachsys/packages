mode autotools

check() {
  url http://www.greenwoodsoftware.com/less/download.html
  match version 600 'less-([0-9.]+)\.tar'
}

prepare() {
  unpack http://www.greenwoodsoftware.com/less/less-600.tar.gz
  tree 0f947facc9a18871c7620a1bcf3e6f81a76cffe3604e8299bf898c3fa7544bcb
}

post-install() {
  rm -f /dst/bin/lesskey /dst/lib/man/man1/lesskey.1
  ln -s less /dst/bin/more
}
