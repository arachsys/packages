mode autotools

check() {
  url http://www.greenwoodsoftware.com/less/download.html
  match version 633 'less-([0-9.]+)(-beta)?\.tar'
}

prepare() {
  unpack http://www.greenwoodsoftware.com/less/less-633-beta.tar.gz
  tree 0d05ec32534993aaeed6c1d158672f5bd4a775f609368eef1bef2bd00b8e5afd
}

config-extra --with-regex=pcre2

post-config() {
  sed -i '/#define LESSHISTFILE/s/".*"/"-"/' defines.h
}

post-install() {
  rm -f /dst/bin/lesskey /dst/lib/man/man1/lesskey.1
  ln -s less /dst/bin/more
}
