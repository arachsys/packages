mode autotools

check() {
  url http://www.greenwoodsoftware.com/less/download.html
  match version 632 'less-([0-9.]+)(-beta)?\.tar'
}

prepare() {
  unpack http://www.greenwoodsoftware.com/less/less-632-beta.tar.gz
  tree ef7dffc9731fd958fa75af1bddf216ae09f863fa1f782f54f49b5e83f8e5db96
}

config-extra --with-regex=pcre2

post-config() {
  sed -i '/#define LESSHISTFILE/s/".*"/"-"/' defines.h
}

post-install() {
  rm -f /dst/bin/lesskey /dst/lib/man/man1/lesskey.1
  ln -s less /dst/bin/more
}
