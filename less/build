mode autotools

check() {
  url http://www.greenwoodsoftware.com/less/download.html
  match version 629 'less-([0-9.]+)(-beta)?\.tar'
}

prepare() {
  unpack http://www.greenwoodsoftware.com/less/less-629-beta.tar.gz
  tree 329c8e7f502aef141842673ed5ecfc6bf041291fe4b330f3c56d4fb1803d1627
}

config-extra --with-regex=pcre2

post-config() {
  sed -i '/#define LESSHISTFILE/s/".*"/"-"/' defines.h
}

post-install() {
  rm -f /dst/bin/lesskey /dst/lib/man/man1/lesskey.1
  ln -s less /dst/bin/more
}
