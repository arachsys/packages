mode autotools

check() {
  url http://www.greenwoodsoftware.com/less/download.html
  match version 639 'less-([0-9.]+)(-beta)?\.tar'
}

prepare() {
  unpack http://www.greenwoodsoftware.com/less/less-639-beta.tar.gz
  tree 163a94ffb365fec8904aafb4f0be7c7b141cd2e11d6a6a177798942d3f0ae9fa
}

config-extra --with-regex=pcre2

post-config() {
  sed -i '/#define LESSHISTFILE/s/".*"/"-"/' defines.h
}

post-install() {
  rm -f /dst/bin/lesskey /dst/lib/man/man1/lesskey.1
  ln -s less /dst/bin/more
}
