check() {
  url https://releases.pagure.org/libaio/
  match version 0.3.112 'libaio-([0-9.]+)\.tar'
}

prepare() {
  unpack https://releases.pagure.org/libaio/libaio-0.3.112.tar.gz
  tree 777c1b35b378cae5bf81d067e7d807cc6231a56737294bfa935bc03d4d3d361b
}

build() {
  make install DESTDIR=/dst prefix= includedir=/lib/include
}
