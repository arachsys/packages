check() {
  url https://github.com/libarchive/libarchive/tags
  match version 3.8.2 'v([0-9.]+)\.tar'
}

prepare() {
  unpack libarchive-3.8.2.tar.xz \
    https://github.com/libarchive/libarchive/releases/download/v3.8.2/libarchive-3.8.2.tar.xz
  apply cosmetic.diff
  tree b8afbf33978df0aa6dceae789a7db46e38e262fdeb1de05cd0eb8a4504558ccb
}

build() {
  auto-config --disable-acl --enable-bsd{cat,cpio,tar}=dynamic \
    --enable-xattr --without-{expat,xml2} --with-{bz2lib,lzma,zlib,zstd}
  make install DESTDIR=/dst
  mv /dst/bin/{bsdcpio,cpio}
  mv /dst/bin/{bsdtar,tar}
}
