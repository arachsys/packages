check() {
  url https://github.com/libarchive/libarchive/tags
  match version 3.8.1 'v([0-9.]+)\.tar'
}

prepare() {
  unpack libarchive-3.8.1.tar.xz \
    https://github.com/libarchive/libarchive/releases/download/v3.8.1/libarchive-3.8.1.tar.xz
  apply cosmetic.diff
  tree db6198c478dd2ee57206b6061cda913c34ea97888b605c774e78e63f1a12fff1
}

build() {
  auto-config --disable-acl --enable-bsd{cat,cpio,tar}=dynamic \
    --enable-xattr --without-{expat,xml2} --with-{bz2lib,lzma,zlib,zstd}
  make install DESTDIR=/dst
  mv /dst/bin/{bsdcpio,cpio}
  mv /dst/bin/{bsdtar,tar}
}
