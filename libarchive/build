mode autotools

check() {
  url https://www.libarchive.org/downloads/
  match version 3.5.2 'libarchive-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.libarchive.org/downloads/libarchive-3.5.2.tar.xz
  tree 4fd1c29933a110385bbf009aa74b1dd04d81c0c6a7b3ad204d7396199ce637cb
}

config-extra --disable-acl --enable-bsd{cat,cpio,tar}=dynamic \
  --enable-xattr --without-{expat,xml2} --with-{bz2lib,lzma,zlib,zstd}

post-install() {
  mv /dst/bin/{bsdcpio,cpio}
  mv /dst/bin/{bsdtar,tar}
}
