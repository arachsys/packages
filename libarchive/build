check() {
  url https://www.libarchive.org/downloads/
  match version 3.7.5 'libarchive-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.libarchive.org/downloads/libarchive-3.7.5.tar.xz
  apply cosmetic.diff
  tree d58d0100ec231a72cc35b409cfc2aec0dd85edb037665638741b765c1b4ab772
}

build() {
  auto-config --disable-acl --enable-bsd{cat,cpio,tar}=dynamic \
    --enable-xattr --without-{expat,xml2} --with-{bz2lib,lzma,zlib,zstd}
  make install DESTDIR=/dst
  mv /dst/bin/{bsdcpio,cpio}
  mv /dst/bin/{bsdtar,tar}
}
