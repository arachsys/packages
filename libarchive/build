check() {
  url https://github.com/libarchive/libarchive/tags
  match version 3.8.4 'v([0-9.]+)\.tar'
}

prepare() {
  unpack libarchive-3.8.4.tar.xz \
    https://github.com/libarchive/libarchive/releases/download/v3.8.4/libarchive-3.8.4.tar.xz
  apply cosmetic.diff
  tree 03884604a6f5f20e5b1c759ac8a929e28f372e77dffeb929a4de30540eb96e9f
}

build() {
  auto-config --disable-acl --enable-bsd{cat,cpio,tar}=dynamic \
    --enable-xattr --without-{expat,xml2} --with-{bz2lib,lzma,zlib,zstd}
  make install DESTDIR=/dst
  mv /dst/bin/{bsdcpio,cpio}
  mv /dst/bin/{bsdtar,tar}
}
