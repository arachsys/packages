check() {
  url https://github.com/libarchive/libarchive/tags
  match version 3.8.3 'v([0-9.]+)\.tar'
}

prepare() {
  unpack libarchive-3.8.3.tar.xz \
    https://github.com/libarchive/libarchive/releases/download/v3.8.3/libarchive-3.8.3.tar.xz
  apply cosmetic.diff
  tree 1988b988641beca1412705b82d5afd5e4e75674b8ba56ec2904c80411a738b18
}

build() {
  auto-config --disable-acl --enable-bsd{cat,cpio,tar}=dynamic \
    --enable-xattr --without-{expat,xml2} --with-{bz2lib,lzma,zlib,zstd}
  make install DESTDIR=/dst
  mv /dst/bin/{bsdcpio,cpio}
  mv /dst/bin/{bsdtar,tar}
}
