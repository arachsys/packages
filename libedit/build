check() {
  url https://thrysoee.dk/editline/
  match version 20230827-3.1 'libedit-([-0-9.]+)\.tar'
}

prepare() {
  unpack https://thrysoee.dk/editline/libedit-20230827-3.1.tar.gz
  apply config.diff
  apply musl.diff
  tree be0950fb14b9308e7357ddb491f3ebbf9879ddc1d31141de7af58b16cfacf793
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/lib/{include/editline/readline.h,libedit.so}
  echo 'INPUT ( libedit.a libncurses.so )' >/dst/lib/libedit.so
}
