check() {
  url https://thrysoee.dk/editline/
  match version 20240517-3.1 'libedit-([-0-9.]+)\.tar'
}

prepare() {
  unpack https://thrysoee.dk/editline/libedit-20240517-3.1.tar.gz
  apply config.diff
  apply musl.diff
  tree f67f9d87da1a288f6b2ee82916641ee30371aa2d3ea46c6aee98003127f8211b
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/lib/{include/editline/readline.h,libedit.so}
  echo 'INPUT ( libedit.a libncurses.so )' >/dst/lib/libedit.so
}
