mode autotools

check() {
  url https://github.com/libevent/libevent/releases
  match version 2.1.12 'libevent-([0-9.]+)-stable\.tar'
}

prepare() {
  unpack libevent-2.1.12.tar.gz \
    https://github.com/libevent/libevent/releases/download/release-2.1.12-stable/libevent-2.1.12-stable.tar.gz
  tree abfcd9d7c2f6a107ba06b69cb49818f19c53a09baf263cbd723745d70e16811a
}

pre-config() {
  sed -i '/GENERIC_LDFLAGS =/s/\$(RELEASE) //p' Makefile.{am,in}
}

post-install() {
  rm -f /dst/bin/event_rpcgen.py
}
