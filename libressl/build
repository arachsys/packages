mode autotools

check() {
  url https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/
  match version 3.4.2 'libressl-([0-9.]+)\.tar'
}

prepare() {
  unpack https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-3.4.2.tar.gz
  tree 13241973091362ce7af227facaed843f32fc58755114ed13e99f6212dda0957f
}

config-extra --enable-nc
