check() {
  url https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/
  match version 3.8.1 'libressl-([0-9.]+)\.tar'
}

prepare() {
  unpack https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-3.8.1.tar.gz
  tree 51636398a1fccf915cd7be1f170b83d9af23fdeaa1846bb6e96956ff498aa1c5
}

build() {
  auto-config --enable-nc
  make && make install DESTDIR=/dst
}
