mode autotools

check() {
  url https://www.libressl.org/
  match version 3.4.3 'latest stable release is ([0-9.]*[0-9])'
}

prepare() {
  unpack https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-3.4.3.tar.gz
  tree 670265fcc910939ba179e8665c6051e6a241a966be97c18375f0a058f691bebd
}

config-extra --enable-nc
