check() {
  url https://www.kernel.org/
  match linux 5.13.12 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.13.12.tar.xz
  tree 57147edad62fbe06ac5cc47c85d8b0c4c9d683b72f3aa4191833012a19d378bc
}

build() {
  make headers CC=cc HOSTCC=cc
  find usr/include -type f -name '*.h' -exec cp -t /dst --parents {} +
  find usr/include -type l -exec cp -d -t /dst --parents {} +
  mv /dst/usr /dst/lib
}
