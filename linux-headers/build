check() {
  url https://www.kernel.org/
  match linux 5.13.7 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.13.7.tar.xz
  tree 2e26eca970e2dbdc797c9fa6d1d8af874d69985bf491bc96426ec18a3957722b
}

build() {
  make headers CC=cc HOSTCC=cc
  find usr/include -type f -name '*.h' -exec cp -t /dst --parents {} +
  find usr/include -type l -exec cp -d -t /dst --parents {} +
  mv /dst/usr /dst/lib
}
