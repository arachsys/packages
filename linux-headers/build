check() {
  url https://www.kernel.org/
  match linux 5.13.9 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.13.9.tar.xz
  tree 3bef6a9cabc7f9fd15dcdc04a08d1d3201783318ec4a4e264eee349593432f2b
}

build() {
  make headers CC=cc HOSTCC=cc
  find usr/include -type f -name '*.h' -exec cp -t /dst --parents {} +
  find usr/include -type l -exec cp -d -t /dst --parents {} +
  mv /dst/usr /dst/lib
}
