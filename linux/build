check() {
  url https://www.kernel.org/
  match linux 5.18 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.18.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 5199acb6a07848b30d659ef8fea16a8e88b6dc5af46dc30b6ccc34f65d71d3ff
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
