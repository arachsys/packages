check() {
  url https://www.kernel.org/
  match linux 5.14.7 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.14.7.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 3fdae61f4fafb3860695f5895261a37c38c3a4f4bd4f5e5c389059b8023381b1

  if enabled bcachefs; then
    apply bcachefs-20211001.diff
    tree 08b7eae09ee3c89fd05107e25d10f47e01bc1134e849bffc8d6038fc5b886e64
  fi
}

build() {
  make headers
  mkdir -p /dst/img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /dst/img/linux-headers/lib/include --parents {} +
}
