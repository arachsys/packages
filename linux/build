check() {
  url https://www.kernel.org/
  match linux 5.18.8 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.18.8.tar.xz
  apply llvm.diff
  apply md.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 699e83702b86220db7384d7d58c9e6898447d3a976ee561e4f98dcaf1f9bbc4f
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
