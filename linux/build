check() {
  url https://www.kernel.org/
  match linux 5.15.11 'linux-([0-9.]+)\.tar'

  url https://api.github.com/repos/koverstreet/bcachefs/branches/master
  match 'bcachefs snapshot' 20211224 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.15.11.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree e9e692e9cb5802bbbd04415328f7ec6ac28160df2c5dd21eb17f15334ceb9148

  if enabled bcachefs; then
    apply bcachefs-20211224.diff
    tree 897c20aa0df46261034e329a0fa8e6da27c4acba477694772140897ed7be4fda
  fi
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
