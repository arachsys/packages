check() {
  url https://www.kernel.org/
  match linux 6.1 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v6.x/linux-6.1.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 9ba269960f7b468076d1702dc4345ed7ac844b8d0cc17bb02089c2d157f82b64
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
