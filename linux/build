check() {
  url https://www.kernel.org/
  match linux 5.17.3 'linux-([0-9.]+)\.tar'

  url https://api.github.com/repos/koverstreet/bcachefs/branches/master
  match 'bcachefs snapshot' 20220417 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.17.3.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 5ca05ec2af8b7e3d9ae6a8fa25c62834f2e97cfbbce2a6d8324c7629a125fc75

  if enabled bcachefs; then
    apply bcachefs-20220417.diff
    tree 57d26087b0e7d501a44e8d00bd950459200bc3564ad64741028007d263333b7e
  fi
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
