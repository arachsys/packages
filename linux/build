check() {
  url https://www.kernel.org/
  match linux 5.16.17 'linux-([0-9.]+)\.tar'

  url https://api.github.com/repos/koverstreet/bcachefs/branches/master
  match 'bcachefs snapshot' 20220321 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.16.17.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 7daf9a7d0ff5b4ac4492acbbff596fc087b6c747540aacfaf6bc2fc5fed4c6b0

  if enabled bcachefs; then
    apply bcachefs-20220321.diff
    tree da382c79d6d446e71de0172d71de62fbd705b648d377cdf87a467fa1c52ba4f4
  fi
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
