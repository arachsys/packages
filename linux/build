check() {
  url https://www.kernel.org/
  match linux 5.15 'linux-([0-9.]+)\.tar'

  url https://api.github.com/repos/koverstreet/bcachefs
  match 'bcachefs snapshot' 20211104 \
    '"pushed_at": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.15.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 2f600b4b1e34245841ebe560e138f5e83b80283e28b854b8dd48f2929936ca17

  if enabled bcachefs; then
    apply bcachefs-20211104.diff
    tree 08e60f9ec5ed01a33e5f0c6347a28c54b0f9f8baeb73b48aa53b628a9ebcd0e4
  fi
}

build() {
  make headers
  mkdir -p /dst/img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /dst/img/linux-headers/lib/include --parents {} +
}
