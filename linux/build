check() {
  url https://www.kernel.org/
  match linux 5.14.6 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.14.6.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  tree 8f5623278c3340a9504dddcfa5b8a8797d5c4c4d7d22352f46bc89af61e92bee
}

build() {
  make headers
  mkdir -p /dst/img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /dst/img/linux-headers/lib/include --parents {} +
}
