check() {
  url https://www.kernel.org/
  match linux 5.15.10 'linux-([0-9.]+)\.tar'

  url https://api.github.com/repos/koverstreet/bcachefs/branches/master
  match 'bcachefs snapshot' 20211217 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.15.10.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree bcca4ca751e559bbfdd70b1121b66111207b7ad0c859ff3ebfea0aff374c324c

  if enabled bcachefs; then
    apply bcachefs-20211217.diff
    tree bbffe6541cf58d47be7d4cd3816ee30fe496ba4b7f0f9140e83e836b22f3d9c9
  fi
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
