check() {
  url https://www.kernel.org/
  match linux 6.6.2 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v6.x/linux-6.6.2.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply ping.diff
  apply proxy.diff
  apply regdom.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 3998cb470ea5a21245b8ec28643d1354a79def79570a2696f91b61afb6dd8294
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
