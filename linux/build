check() {
  url https://www.kernel.org/
  match linux 6.12.7 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v6.x/linux-6.12.7.tar.xz
  apply ifb.diff
  apply llvm.diff
  apply ncurses.diff
  apply ping.diff
  apply proxy.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree aa2e02bd709a778eceb04cf364325313dbc34d1b0ea1410c0aafd06de6cb10d4
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
