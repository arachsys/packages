check() {
  url https://www.kernel.org/
  match linux 6.16.6 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v6.x/linux-6.16.6.tar.xz
  apply ifb.diff
  apply llvm.diff
  apply ncurses.diff
  apply ping.diff
  apply proxy.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 8b72f4a6eb0ef91dc5bcda5fc0fc25c9328b85121351db6cd4ad931d55ac6edd
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
