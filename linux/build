check() {
  url https://www.kernel.org/
  match linux 6.11.4 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v6.x/linux-6.11.4.tar.xz
  apply ifb.diff
  apply llvm.diff
  apply ncurses.diff
  apply ping.diff
  apply proxy.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree c684e2887529e14a96f8269864eb2a4c4ea3a20379bbd6c1803878540d997a7f
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
