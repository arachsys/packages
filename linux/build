check() {
  url https://www.kernel.org/
  match linux 5.14.9 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.14.9.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 96f4d24c8c7c2f4e7bc4f893c3763378949bf9b6f223fef2eaad69f51e8a0f81

  if enabled bcachefs; then
    apply bcachefs-20211001.diff
    tree 2f96747af96743567f619dcf17bb52628d124b9cf15685a19c43e259db8d5bea
  fi
}

build() {
  make headers
  mkdir -p /dst/img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /dst/img/linux-headers/lib/include --parents {} +
}
