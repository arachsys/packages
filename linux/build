check() {
  url https://www.kernel.org/
  match linux 5.14.15 'linux-([0-9.]+)\.tar'

  url https://api.github.com/repos/koverstreet/bcachefs
  match 'bcachefs snapshot' 20211030 \
    '"pushed_at": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.14.15.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 742852256f29f089c0cb0e4d211a6328782cd7da7cd4a6f9674348fba8fa868c

  if enabled bcachefs; then
    apply bcachefs-20211030.diff
    apply bcachefs-fixes.diff
    tree 7ff0b576295f7982c953951d2fed398712472bf807384c6259c3b39a8b2560d6
  fi
}

build() {
  make headers
  mkdir -p /dst/img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /dst/img/linux-headers/lib/include --parents {} +
}
