check() {
  url https://www.kernel.org/
  match linux 6.7.2 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v6.x/linux-6.7.2.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply ping.diff
  apply proxy.diff
  apply regdom.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree a9886ce19d5dbf1d67efd2bf79a0f74908600cdb5920e89f6da9d771c8c69959
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
