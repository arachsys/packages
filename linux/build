check() {
  url https://www.kernel.org/
  match linux 6.18.5 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v6.x/linux-6.18.5.tar.xz
  apply ifb.diff
  apply llvm.diff
  apply ncurses.diff
  apply ping.diff
  apply proxy.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree f316fcf57cc299ac10cc6d403b3550d4c3987c1deb52335427febb5c9875a1a8
}

build() {
  make headers
  mkdir -p /img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /img/linux-headers/lib/include --parents {} +
}
