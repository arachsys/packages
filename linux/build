check() {
  url https://www.kernel.org/
  match linux 5.14 'linux-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.14.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  tree e919bfa5f3ee6fffc7661b8357c7235bb331486acc5ec4b6f9b4bf84033146af
}

build() {
  make headers
  mkdir -p /dst/img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /dst/img/linux-headers/lib/include --parents {} +
}
