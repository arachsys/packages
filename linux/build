check() {
  url https://www.kernel.org/
  match linux 5.14.12 'linux-([0-9.]+)\.tar'

  url https://api.github.com/repos/koverstreet/bcachefs
  match 'bcachefs snapshot' 20211007 \
    '"pushed_at": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.14.12.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree af025b6e9435411e58fdbceee46b3360402eb29aa23602644a28f0d1faf2d10f

  if enabled bcachefs; then
    apply bcachefs-20211013.diff
    apply bcachefs-fixes.diff
    tree 02f2b80aa4910df21675bc63d1df93c92fba24adc5d92f111f995c1fae05324a
  fi
}

build() {
  make headers
  mkdir -p /dst/img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /dst/img/linux-headers/lib/include --parents {} +
}
