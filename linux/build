check() {
  url https://www.kernel.org/
  match linux 5.15.2 'linux-([0-9.]+)\.tar'

  url https://api.github.com/repos/koverstreet/bcachefs/branches/master
  match 'bcachefs snapshot' 20211113 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.15.2.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree 8ba5306eeaf9b502c3762e88da094cc71050e852b605b345b64bc2321e3bb573

  if enabled bcachefs; then
    apply bcachefs-20211113.diff
    tree aadf1970d1246c5c7f00547c8477e1a1a7f93605bd94efc75a6921528e5a2347
  fi
}

build() {
  make headers
  mkdir -p /dst/img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /dst/img/linux-headers/lib/include --parents {} +
}
