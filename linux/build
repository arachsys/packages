check() {
  url https://www.kernel.org/
  match linux 5.15.1 'linux-([0-9.]+)\.tar'

  url https://api.github.com/repos/koverstreet/bcachefs
  match 'bcachefs snapshot' 20211106 \
    '"pushed_at": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/kernel/v5.x/linux-5.15.1.tar.xz
  apply llvm.diff
  apply ncurses.diff
  apply regdom.diff
  apply swab.diff

  find . -type f -executable -exec sed -e '1s:^#! *//*:#!/:' \
    -e '1s:^#!/usr/local/:#!/:' -e '1s:^#!/usr/:#!/:' \
    -e '1s:^#!/bin/env  *\([^ =][^ =]*\)\( \|$\):#!/bin/\1\2:' \
    -i {} +

  tree e2d46e0adc76f261897771366a7818a1420b5d2760785eca4226fadb736fb18e

  if enabled bcachefs; then
    apply bcachefs-20211106.diff
    tree 250995855c23e5df52abadf1ec4285978b2cd4b9491dab83cc7dfb0b7584b7eb
  fi
}

build() {
  make headers
  mkdir -p /dst/img/linux-headers/lib/include
  cd usr/include && find . -xtype f -name '*.h' \
    -exec cp -d -t /dst/img/linux-headers/lib/include --parents {} +
}
