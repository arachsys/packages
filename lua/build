check() {
  url https://www.lua.org/ftp/
  match version 5.4.3 'lua-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.lua.org/ftp/lua-5.4.3.tar.gz
  apply paths.patch
  tree 4361aa1a2e7538f6bdcc0872f6d42e3621d48f39778628e53a8644c1822b18b8
}

build() {
  make linux-readline CC="cc -std=gnu99"
  make install INSTALL_TOP=/dst
}
