check() {
  url https://www.lua.org/ftp/
  match version 5.4.4 'lua-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.lua.org/ftp/lua-5.4.4.tar.gz
  apply paths.diff
  tree a8f1c7ac8e9d27e4d98ef28d70122280314d672249f40b1a330398e85605a8d1
}

build() {
  make linux-readline CC="cc -std=gnu99"
  make install INSTALL_TOP=/dst
}
