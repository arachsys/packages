check() {
  url https://www.lua.org/ftp/
  match version 5.4.5 'lua-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.lua.org/ftp/lua-5.4.5.tar.gz
  apply paths.diff
  tree b1c080e1e65ee8168ff2b86a5705375536297caa35d78097dab5ee4e653ce3f7
}

build() {
  make linux-readline CC="cc -std=gnu99"
  make install INSTALL_TOP=/dst
}
