mode autotools
require libaio

check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.15 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.15.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.15.tgz
  apply freopen.diff
  apply mallinfo.diff
  apply static.diff
  apply tidy.diff
  tree d7345400061224c12500f6c6e37b7057a56c9139f9bed24ee49ad860d9170a40
}

config-extra --enable-dmfilemapd --without-{cache,thin,vdo} \
  AIO_LIBS='-Wl,-Bstatic -laio -Wl,-Bdynamic'

post-install() {
  rm -f -r /dst/bin/{blkdeactivate,fsadm,lvm_import_vdo,lvmdump} /dst/lib
  find /dst/bin -type l -delete
}
