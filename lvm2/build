require libaio

check() {
  url https://sourceware.org/ftp/lvm2/
  match lvm2 2.03.22 'LVM2\.([0-9.]+)\.tgz'
}

prepare() {
  unpack lvm2-2.03.22.tar.gz \
    https://sourceware.org/ftp/lvm2/LVM2.2.03.22.tgz
  apply freopen.diff
  apply static.diff
  apply tidy.diff
  tree 0bdfbaec4b787a0775df909f2d97122824b7989c27a7d990e9df24560df7112c
}

build() {
  auto-config --enable-dmfilemapd --without-{cache,thin,vdo} \
    --with-libexecdir=/lib/lvm2 AIO_LIBS='-Wl,-Bstatic -laio -Wl,-Bdynamic'
  sed -i 's:/lib/lvm2/lvresize_fs_helper:/lib/lvm2/lvresize-fs-helper:' \
    include/configure.h
  make install DESTDIR=/dst
  rm -f -r /dst/bin/{blkdeactivate,fsadm,lvm_import_vdo,lvmdump} /dst/lib
  find /dst/bin -type l -delete
}
