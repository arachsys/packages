check() {
  url https://github.com/lz4/lz4/releases
  match version 1.9.4 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack lz4-1.9.4.tar.gz \
    https://github.com/lz4/lz4/archive/refs/tags/v1.9.4.tar.gz
  tree 5e1472bbadce5a5707189e3d1d8bc2bc5e8b09a6c5a853c010d98645b131270b
}

build() {
  make install DESTDIR=/dst PREFIX= INCLUDEDIR=/lib/include MANDIR=/lib/man
  rm -f /dst/bin/lz4c
}
