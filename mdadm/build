check() {
  url https://www.kernel.org/pub/linux/utils/raid/mdadm/
  match version 4.2 'mdadm-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.kernel.org/pub/linux/utils/raid/mdadm/mdadm-4.2.tar.xz
  apply paths.diff
  apply systemd.diff
  apply udisks.diff
  apply warnings.diff
  tree 2120defd088a14b144187ea9f1865014bc665e35077d8d24a2b212401cdae96d
}

build() {
  make install-bin CC=cc CXFLAGS="-DNO_LIBUDEV -Wno-unused-function -O2" \
    DESTDIR=/dst
}
