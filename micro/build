require go

check() {
  url https://github.com/zyedidia/micro/tags
  match version 2.0.11 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack micro-2.0.11.tar.gz \
    https://github.com/zyedidia/micro/archive/refs/tags/v2.0.11.tar.gz
  go mod vendor
  tree 8e822a90f51dd2c2fde0c391e85be96f1a985a5589eb9ba831a8724d26ddfc3e
}

build() {
  make build {HASH,VERSION}=2.0.11 DATE=$(date +%F)
  install -D micro /dst/bin/micro
}
