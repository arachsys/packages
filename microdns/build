check() {
  url https://api.github.com/repos/arachsys/microdns/branches/master
  match snapshot 20240211 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack microdns-20240211-4eafaf5c.tar.gz \
    https://github.com/arachsys/microdns/archive/4eafaf5c.tar.gz
  tree 1e2b6258065493f8b1858c229575b982d87392ae9163d20184ccfdcadbd42f46
}

build() {
  make install DESTDIR=/dst $(enabled static && echo LDFLAGS+=-static)
}
