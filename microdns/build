check() {
  url https://api.github.com/repos/arachsys/microdns/branches/master
  match snapshot 20251223 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack microdns-20251223-73f12796.tar.gz \
    https://github.com/arachsys/microdns/archive/73f12796.tar.gz
  tree 89533838e6c235a7eb3a1f3a20cc12d71fd7698c3ff614ee02587c6772752954
}

build() {
  make install DESTDIR=/dst $(enabled static && echo LDFLAGS+=-static)
}
