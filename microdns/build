check() {
  url https://api.github.com/repos/arachsys/microdns/branches/master
  match snapshot 20240224 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack microdns-20240224-98e64379.tar.gz \
    https://github.com/arachsys/microdns/archive/98e64379.tar.gz
  tree 273de35779a2f795cbcf6946655dc50d948b6bf90978a91c61160dd9f47a178e
}

build() {
  make install DESTDIR=/dst $(enabled static && echo LDFLAGS+=-static)
}
