enable setuid

check() {
  url https://www.bitwizard.nl/mtr/files/
  match version 0.94 'mtr-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.bitwizard.nl/mtr/files/mtr-0.94.tar.gz
  apply cosmetic.diff
  apply format.diff
  apply prune.diff
  tree 81ff62c134ff48af76cd253eb2d0a65827d46a9d8fa4aca3543730ce3f2d9e73
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f -r /dst/lib/bash-completion
}
