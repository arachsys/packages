require lmdb perl

check() {
  url https://bitbucket.org/mutt/mutt/downloads/
  match version 2.2.12 'mutt-([0-9.]+)\.tar'
}

prepare() {
  unpack https://bitbucket.org/mutt/mutt/downloads/mutt-2.2.12.tar.gz
  tree d39f5292e9031f2f303a91519a4a57a957f5c96f04337d5ceffdebb6e50dbdfd
}

build() {
  auto-config --docdir=/lib/doc/mutt --disable-{pgp,smime} \
    --enable-{hcache,imap,pop,sidebar,smtp} --with-{lmdb,ssl} \
    --with-homespool=Maildir SENDMAIL=/bin/sendmail
  sed -i '/MUTTLIBS =/s/-llmdb/-Wl,-Bstatic \0 -Wl,-Bdynamic/' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/flea /dst/bin/muttbug
}
