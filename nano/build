mode autotools

check() {
  url https://www.nano-editor.org/dist/latest/
  match version 6.0 'nano-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.nano-editor.org/dist/v6/nano-6.0.tar.xz
  tree ddabd8d2841c4de4473a02be68dfd32dbadf880cc2586c19701d5b6398eec9ac
}

post-install() {
  rm -f /dst/bin/rnano
}
