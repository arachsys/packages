mode autotools

check() {
  url https://www.nano-editor.org/dist/latest/
  match version 6.2 'nano-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.nano-editor.org/dist/v6/nano-6.2.tar.xz
  tree bffbb254741f43a1a57ebe48603bf7332b90923fffa5d26ac109ec65906d2f34
}

post-install() {
  rm -f /dst/bin/rnano
}
