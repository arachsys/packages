check() {
  url https://www.nano-editor.org/dist/latest/
  match version 8.0 'nano-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.nano-editor.org/dist/v8/nano-8.0.tar.xz
  tree b1a429a20ecf468a75a68b70e27f1db883f811d8dc645adbf75c8ca96112a603
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/bin/rnano
}
