mode autotools

check() {
  url https://www.nano-editor.org/dist/latest/
  match version 5.8 'nano-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.nano-editor.org/dist/v5/nano-5.8.tar.xz
  tree 4acd81b2ce99c35604bcab58570deb6180b1dbe99bf6f30f9d9cb63280573949
}

post-install() {
  rm -f /dst/bin/rnano
}
