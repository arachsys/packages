mode autotools

check() {
  url https://www.nano-editor.org/dist/latest/
  match version 6.4 'nano-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.nano-editor.org/dist/v6/nano-6.4.tar.xz
  tree 80c79d1d4606409b893cc626dc128cb32b86bdcd928c64ef7d40094af6e8aebe
}

post-install() {
  rm -f /dst/bin/rnano
}
