mode autotools

check() {
  url https://www.nano-editor.org/dist/latest/
  match version 7.0 'nano-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.nano-editor.org/dist/v7/nano-7.0.tar.xz
  tree 501edefbb53b7e3d7f5d01406a903955d8937789070b53b6e17bca892da7c09a
}

post-install() {
  rm -f /dst/bin/rnano
}
