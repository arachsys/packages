check() {
  url https://www.nano-editor.org/dist/latest/
  match version 8.7.1 'nano-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.nano-editor.org/dist/v8/nano-8.7.1.tar.xz
  tree ee99d7fe746a4217abbdaff59636c5ba660f95d4e153fea20e4d47d29cc85d25
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/bin/rnano
}
