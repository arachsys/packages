check() {
  url https://www.nano-editor.org/dist/latest/
  match version 8.6 'nano-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.nano-editor.org/dist/v8/nano-8.6.tar.xz
  tree d4ca2c9e2dd0bbdf3d56ad1f17006eddc7e4c76cd7185fc815d06119d86a2a5e
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/bin/rnano
}
