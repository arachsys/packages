mode autotools

check() {
  url https://www.nano-editor.org/dist/latest/
  match version 7.2 'nano-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.nano-editor.org/dist/v7/nano-7.2.tar.xz
  tree 03bcb47b0a4aff11536a18312bf6f22e619c7a757f7a2cd76877c72af2339d45
}

post-install() {
  rm -f /dst/bin/rnano
}
