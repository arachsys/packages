name iputils-ping
version s20140519
enable setuid

prepare() {
  unpack https://github.com/iputils/iputils/archive/$VERSION.tar.gz \
         iputils-$VERSION.tar.gz
}

build() {
  make ping ping6 USE_CAP=no USE_GNUTLS=no
  mkdir -p $DST/bin
  install -m 4755 -o root -g root -s ping ping6 $DST/bin
}
