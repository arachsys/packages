mode autotools

prepare() {
  unpack https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-1.9.tar.xz
  apply dbus.patch
  apply paths.patch
  apply resolve.patch
  apply syslog.patch
  tree a5bf903e85ab91d6585b0422aee4f2274bd20cd0d123a12ee119a63782b51f58
}

config-extra --disable-dbus-policy --disable-systemd-service \
  --with-dbus-busdir=/lib/dbus/system-services

post-install() {
  mv $DST/{lib,bin}/iwd
  cp $PKG/resolvconf $DST/bin/
}
