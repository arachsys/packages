mode autotools
require bison flex

check() {
  url https://www.netfilter.org/projects/nftables/files/
  match nftables 1.0.0 'nftables-([0-9.]+)\.tar'

  url https://www.netfilter.org/projects/libmnl/files/
  match libmnl 1.0.4 'libmnl-([0-9.]+)\.tar'

  url https://www.netfilter.org/projects/libnftnl/files/
  match libnftnl 1.2.0 'libnftnl-([0-9.]+)\.tar'
}

prepare() {
  local NFP=https://www.netfilter.org/projects
  unpack $NFP/nftables/files/nftables-1.0.0.tar.bz2
  unpack -d libmnl $NFP/libmnl/files/libmnl-1.0.4.tar.bz2
  unpack -d libnftnl $NFP/libnftnl/files/libnftnl-1.2.0.tar.bz2
  tree bd133c0d17257081bb699baa879fede2bbee7bf018a042eaeba1495a640c59e6
}

pre-config() {
  cd libmnl
  $PWD/configure --prefix=/src/libs --disable-shared
  make install
  cd /src

  cd libnftnl
  $PWD/configure --prefix=/src/libs --disable-shared \
    LIBMNL_CFLAGS=-I/src/libs/include LIBMNL_LIBS="-L/src/libs/lib -lmnl"
  make install
  cd /src
}

config-extra --disable-{debug,man-doc,python,shared} --with-mini-gmp
config-extra LIBMNL_CFLAGS=-I/src/libs/include
config-extra LIBMNL_LIBS="-L/src/libs/lib -lmnl"
config-extra LIBNFTNL_CFLAGS=-I/src/libs/include
config-extra LIBNFTNL_LIBS="-L/src/libs/lib -lnftnl"

post-install() {
  rm -f -r /dst/lib/{include,lib*.a,lib*.la}
}
