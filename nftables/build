mode autotools
require bison flex

check() {
  url https://www.netfilter.org/projects/nftables/files/
  match nftables 1.0.1 'nftables-([0-9.]+)\.tar'

  url https://www.netfilter.org/projects/libmnl/files/
  match libmnl 1.0.4 'libmnl-([0-9.]+)\.tar'

  url https://www.netfilter.org/projects/libnftnl/files/
  match libnftnl 1.2.1 'libnftnl-([0-9.]+)\.tar'
}

prepare() {
  local NFP=https://www.netfilter.org/projects
  unpack $NFP/nftables/files/nftables-1.0.1.tar.bz2
  unpack -d libmnl $NFP/libmnl/files/libmnl-1.0.4.tar.bz2
  unpack -d libnftnl $NFP/libnftnl/files/libnftnl-1.2.1.tar.bz2
  tree 3b1d59c2aed4d14dc1b303f3b85b5b499930893238ac87f25921a2a88a52b783
}

pre-config() {
  cd libmnl
  $PWD/configure --prefix=/src/libs --disable-shared
  make install
  cd /src

  cd libnftnl
  $PWD/configure --prefix=/src/libs --disable-shared \
    LIBMNL_CFLAGS=-I/src/libs/include LIBMNL_LIBS="-L/src/libs/lib -lmnl"
  make install
  cd /src
}

config-extra --disable-shared --with-cli=readline --with-mini-gmp \
  LIBMNL_CFLAGS=-I/src/libs/include LIBMNL_LIBS="-L/src/libs/lib -lmnl" \
  LIBNFTNL_CFLAGS=-I/src/libs/include LIBNFTNL_LIBS="-L/src/libs/lib -lnftnl"

post-install() {
  rm -f -r /dst/lib/{include,lib*.a,lib*.la}
}
