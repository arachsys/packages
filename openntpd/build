mode autotools
require bison

check() {
  url https://cdn.openbsd.org/pub/OpenBSD/OpenNTPD/
  match version 6.8p1 'openntpd-([0-9.]+p[0-9]+)\.tar'
}

prepare() {
  unpack https://cdn.openbsd.org/pub/OpenBSD/OpenNTPD/openntpd-6.8p1.tar.gz
  apply adjtimex.diff
  apply cosmetic.diff
  apply dnsretry.diff
  apply paths.diff
  apply settime.diff
  tree 89f20157d1a489ad4d9504dcf0995a70cc929d85073af9d23257ee17e95d6fd3
}

config-extra --enable-https-constraint --with-privsep-user=ntp
