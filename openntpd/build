require bison

check() {
  url https://github.com/arachsys/openntpd/tags
  match version 7.8.0 'openntpd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/openntpd/archive/openntpd-7.8.0.tar.gz
  tree fed04f0507567be5826460a6dc4531973da14c57b207c3bbc98eb633e3824ab3
}

build() {
  make install DESTDIR=/dst
}
