require bison

check() {
  url https://github.com/arachsys/openntpd/tags
  match version 7.5.0 'openntpd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/openntpd/archive/openntpd-7.5.0.tar.gz
  tree 4e15e061014a67eaf5ad103bcd4a23327471125a958761dd99f5cb68714bbde5
}

build() {
  make install DESTDIR=/dst
}
