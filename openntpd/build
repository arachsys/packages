require bison

check() {
  url https://github.com/arachsys/openntpd/tags
  match version 7.5.4 'openntpd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/openntpd/archive/openntpd-7.5.4.tar.gz
  tree a7809e438e08e824c584f42598e82c205539e4893392bd9dbe86787245f917f6
}

build() {
  make install DESTDIR=/dst
}
