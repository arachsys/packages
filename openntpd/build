require bison

check() {
  url https://github.com/arachsys/openntpd/tags
  match version 7.5.2 'openntpd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/arachsys/openntpd/archive/openntpd-7.5.2.tar.gz
  tree d524ebff23bdae9721ab8e75b05978c54f5a503394398e0eb264d031b63d237a
}

build() {
  make install DESTDIR=/dst
}
