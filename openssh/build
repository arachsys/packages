mode autotools
enable setuid
require libedit

check() {
  url https://cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/
  match version 9.1p1 'openssh-([0-9.]+p[0-9]+)\.tar'
}

prepare() {
  unpack https://cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-9.1p1.tar.gz
  apply config.diff
  apply dnssegv.diff
  apply home.diff
  apply sftp.diff
  tree def1035d4db39fdfd0284cfc54740c1be6e7fb2470234b8c65d3c1ab8dcacc26
}

config-extra --sysconfdir=/etc/ssh --libexecdir=/lib/openssh \
  --disable-lastlog --disable-{u,w}tmp{,x} --with-4in6 \
  --with-default-path=/bin --with-libedit --with-pid-dir=/run \
  --with-privsep-{path=/run/empty,user=ssh} --with-xauth=/bin/xauth

install-reset install-nokeys DESTDIR=/dst

post-config() {
  sed -i '/^CFLAGS=/s/ -fzero-call-used-regs=all//' **/Makefile
}

post-install() {
  chmod u+rw,go+r /dst/lib/openssh/*
  image - requires libedit
}
