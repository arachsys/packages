mode autotools
enable setuid
require libedit

check() {
  url https://cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/
  match version 8.9p1 'openssh-([0-9.]+p[0-9]+)\.tar'
}

prepare() {
  unpack https://cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-8.9p1.tar.gz
  apply config.diff
  apply dnssegv.diff
  apply scp.diff
  apply sftp.diff
  tree de7d684e2d22331aefc70dfa68e9570107a7add4f7556f29d81b92f5a9e03b38
}

config-extra --sysconfdir=/etc/ssh --libexecdir=/lib/openssh \
  --disable-lastlog --disable-{u,w}tmp{,x} --with-4in6 \
  --with-default-path=/bin --with-libedit --with-pid-dir=/run \
  --with-privsep-{path=/run/empty,user=ssh} --with-xauth=/bin/xauth

install-reset install-nokeys DESTDIR=/dst

post-install() {
  chmod u+rw,go+r /dst/lib/openssh/*
  image - requires libedit
}
