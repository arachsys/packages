check() {
  url https://github.com/pcre2project/pcre2/tags
  match version 10.42 'tags/pcre2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/pcre2project/pcre2/releases/download/pcre2-10.42/pcre2-10.42.tar.gz
  tree 71dd0e0464941214c77b63e35d43acaebfc9c1bc4c3d478570eedb75dbddae28
}

build() {
  auto-config --enable-jit
  make install DESTDIR=/dst
  rm -f -r /dst/bin
}
