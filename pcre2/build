mode autotools

check() {
  url https://github.com/pcre2project/pcre2/tags
  match version 10.41 'tags/pcre2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/pcre2project/pcre2/releases/download/pcre2-10.41/pcre2-10.41.tar.gz
  tree eabbf6e64213a871f6f6d5e8552018411d7be66ec1c94dfe3a36aa73311c2984
}

config-extra --enable-jit

post-install() {
  rm -f -r /dst/bin
}
