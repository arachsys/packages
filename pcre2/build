mode autotools

check() {
  url https://github.com/pcre2project/pcre2/tags
  match version 10.40 'tags/pcre2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/pcre2project/pcre2/releases/download/pcre2-10.40/pcre2-10.40.tar.gz
  tree a399b583ee36da1cdc19a0d11c89fc859c2ff8219c45af16407132070134fa66
}

config-extra --enable-jit

post-install() {
  rm -f -r /dst/bin
}
