check() {
  url https://github.com/pcre2project/pcre2/tags
  match version 10.46 'tags/pcre2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/pcre2project/pcre2/releases/download/pcre2-10.46/pcre2-10.46.tar.gz
  tree 9027d0c8125987cd70a4344b130e9da49927a99a3235ff9bf903f93353415f96
}

build() {
  auto-config --enable-jit
  make install DESTDIR=/dst
  rm -f -r /dst/bin
}
