check() {
  url https://github.com/pcre2project/pcre2/tags
  match version 10.47 'tags/pcre2-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/pcre2project/pcre2/releases/download/pcre2-10.47/pcre2-10.47.tar.gz
  tree 663de61e3f725e5f34066f4929e7fc619d175cc9ca2fa7f39b3e9135dc13c1de
}

build() {
  auto-config --enable-jit
  make install DESTDIR=/dst
  rm -f -r /dst/bin
}
