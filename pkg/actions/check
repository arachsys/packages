mkdir -p "$CACHEDIR" "$IMGDIR"
ROOT=$(mktemp -d "$IMGDIR/root.XXXXXX")
trap 'rm -f -r --one-file-system "$ROOT"' EXIT

populate "$ROOT" base
mkdir -p "$ROOT/pkg"

if [[ $# -eq 0 ]]; then
  for PKGBUILD in "$PKGDIR"/*/build; do
    PKG=${PKGBUILD%/build}
    PKG=$PKG pkg contain "$ROOT" pkg helper check "${PKG##*/}"
  done
else
  for PKG in "$@"; do
    PKG=$(locate "$PKGDIR" "$PKG")
    PKG=$PKG pkg contain "$ROOT" pkg helper check "${PKG##*/}"
  done
fi
