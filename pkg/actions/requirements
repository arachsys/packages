action() {
  if [[ $# -lt 1 ]]; then
    usage
  fi

  PKG=$(locate "$1")
  mkdir -p "$IMGDIR"

  ROOT=$(mktemp -d "$IMGDIR/root.XXXXXX")
  trap 'rm -f -r --one-file-system "$ROOT"' EXIT
  chmod 0755 "$ROOT"

  populate "$ROOT" build
  mkdir -p "$ROOT/pkg"
  PKG=$PKG pkg sandbox "$ROOT" pkg requirements "$1" "${@:2}"
}

helper() {
  setup /pkg "${@:2}"

  if [[ ${#REQUIREMENTS[@]} -gt 0 ]]; then
    printf '%s\n' "${!REQUIREMENTS[@]}"
  fi
}

usage() {
  cat >&2 <<EOF
Usage: ${0##*/} requirements PKG [FEATURE]...

List the build requirements for PKG with the specified FEATURE options.

Set the package source tree location with \$PKGDIR and the image directory
with \$IMGDIR.
EOF
  exit 64
}

if [[ $$ -eq 1 ]]; then
  helper "$@"
else
  action "$@"
fi
