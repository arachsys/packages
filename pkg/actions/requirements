if [[ $# -lt 1 ]]; then
  die "$(< $LIBRARY/help)"
fi

PKG=$(locate "$PKGDIR" "$1")
mkdir -p "$CACHEDIR" "$IMGDIR"

ROOT=$(mktemp -d "$IMGDIR/${1##*/}.XXXXXX")
trap 'rm -f -r --one-file-system "$ROOT"' EXIT
chmod 0755 "$ROOT"

populate "$ROOT" base
mkdir -p "$ROOT/pkg"
PKG=$PKG pkg contain "$ROOT" pkg helper requirements "${PKG##*/}" "${@:2}"
