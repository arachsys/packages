check() {
  url https://api.github.com/repos/arachsys/pocketcrypt/branches/master
  match snapshot 20220219 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack pocketcrypt-20220219-b938ed8e.tar.gz \
    https://github.com/arachsys/pocketcrypt/archive/b938ed8e1092be93c1a5c77d334f0cea8f6a7439.tar.gz
  tree 80fd1fc6a98bf30a7237d7398e28ff684ec4fad1a6de88cb1eedd202a8fb910b
}

build() {
  if [[ $CHOST == aarch64-* ]]; then
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include \
      CFLAGS='-mcpu=native -O3 -Wall -Wfatal-errors'
  else
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include
  fi
}
