check() {
  url https://api.github.com/repos/arachsys/pocketcrypt
  match snapshot 20211027 \
    '"pushed_at": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack pocketcrypt-20211027-906b0de9.tar.gz \
    https://github.com/arachsys/pocketcrypt/archive/906b0de94a563df9f299767c167c1012ff94ec83.tar.gz
  tree 76f73ab9f34f1962bfebb3759ce415a71d99cca25b97ef62ac588ee613b24a61
}

build() {
  if [[ $CHOST == aarch64-* ]]; then
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include \
      CFLAGS='-mcpu=native -O3 -Wall -Wfatal-errors'
  else
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include
  fi
}
