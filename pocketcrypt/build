check() {
  url https://api.github.com/repos/arachsys/pocketcrypt/branches/master
  match snapshot 20211231 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack pocketcrypt-20211231-3390d57f.tar.gz \
    https://github.com/arachsys/pocketcrypt/archive/3390d57f0875e057cc76cf8374354673f819f287.tar.gz
  tree 0d2318932e11fd7a94adc7d0db2618752d2ccf09f7d533b1eae5e47370c39650
}

build() {
  if [[ $CHOST == aarch64-* ]]; then
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include \
      CFLAGS='-mcpu=native -O3 -Wall -Wfatal-errors'
  else
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include
  fi
}
