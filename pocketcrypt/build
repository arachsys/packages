prepare() {
  unpack pocketcrypt-20210705-f9c8ceb2.tar.gz \
    https://github.com/arachsys/pocketcrypt/archive/f9c8ceb26571374da5c313f3b1f0c0fb433d0d07.tar.gz
  tree edefaa0558d2d478bd72c7329358125b31e909d3c5f134364e44a4192bec8e0d
}

build() {
  make install-static install-tools DESTDIR=/dst INCDIR=/lib/include
}
