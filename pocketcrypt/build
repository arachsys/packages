check() {
  url https://api.github.com/repos/arachsys/pocketcrypt
  match snapshot 20211021 \
    '"pushed_at": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack pocketcrypt-20211021-26f827dd.tar.gz \
    https://github.com/arachsys/pocketcrypt/archive/26f827dd923bc1aa32c67e8c1f041da6d9fe1c6c.tar.gz
  tree 2ce5249c3666d1ac1a7c04737d2e3eb7ffccdb3cc6c65408a6fe72a23ae18c7c
}

build() {
  if [[ $CHOST == aarch64-* ]]; then
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include \
      CFLAGS='-mcpu=native -O3 -Wall -Wfatal-errors'
  else
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include
  fi
}
