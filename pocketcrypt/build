check() {
  url https://api.github.com/repos/arachsys/pocketcrypt/branches/master
  match snapshot 20220414 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack pocketcrypt-20220414-e4553de4.tar.gz \
    https://github.com/arachsys/pocketcrypt/archive/e4553de4c653466bd4992b504c01649e2a4dc25e.tar.gz
  tree 297ac38876c69a6c1788d0701236ee9ecc753ebfb4c4da534ec1d6cdbf4b0982
}

build() {
  if [[ $CHOST == aarch64-* ]]; then
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include \
      CFLAGS='-mcpu=native -O3 -Wall -Wfatal-errors'
  else
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include
  fi
}
