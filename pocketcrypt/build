check() {
  url https://api.github.com/repos/arachsys/pocketcrypt/branches/master
  match snapshot 20211114 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack pocketcrypt-20211114-6bf3f389.tar.gz \
    https://github.com/arachsys/pocketcrypt/archive/6bf3f38927204b52a3c5168931652ef2e502a226.tar.gz
  tree 2bae96765fda8578c159b2922d988bf8e68ed13c1d7e08644804d8c293cd1f9b
}

build() {
  if [[ $CHOST == aarch64-* ]]; then
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include \
      CFLAGS='-mcpu=native -O3 -Wall -Wfatal-errors'
  else
    make install-static install-tools DESTDIR=/dst INCDIR=/lib/include
  fi
}
