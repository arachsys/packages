mode autotools

check() {
  url https://sourceforge.net/projects/procps-ng/files/Production/
  match version 4.0.2 'procps-ng-([0-9.]+)\.tar'
}

prepare() {
  unpack https://downloads.sourceforge.net/project/procps-ng/Production/procps-ng-4.0.2.tar.xz
  apply musl.diff
  tree 4ab5d717bd79a0b52c622e467e17824cf90ea29b32810e1f479ca51bf579475c
}

config-extra --disable-{kill,modern-top,shared} --enable-watch8bit \
  NCURSES_CFLAGS= NCURSES_LIBS=-lncursesw PKG_CONFIG=/bin/true

post-install() {
  rm -f -r /dst/bin/w /dst/lib/{include,lib*.a,man/man1/w.1,pkgconfig}
}
