mode autotools

check() {
  url https://sourceforge.net/projects/procps-ng/files/Production/
  match version 4.0.1 'procps-ng-([0-9.]+)\.tar'
}

prepare() {
  unpack https://downloads.sourceforge.net/project/procps-ng/Production/procps-ng-4.0.1.tar.xz
  apply coreid.diff
  apply musl.diff
  tree 74219787e8c2ebe330c2cfc93f16c638b9ac64fc96b9696a335640d915fca35d
}

config-extra --disable-{kill,modern-top,shared} --enable-watch8bit \
  NCURSES_CFLAGS= NCURSES_LIBS=-lncursesw PKG_CONFIG=/bin/true

post-install() {
  rm -f -r /dst/bin/w /dst/lib/{include,lib*.a,man/man1/w.1,pkgconfig}
}
