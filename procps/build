mode autotools

check() {
  url https://sourceforge.net/projects/procps-ng/files/Production/
  match version 4.0.0 'procps-ng-([0-9.]+)\.tar'
}

prepare() {
  unpack https://downloads.sourceforge.net/project/procps-ng/Production/procps-ng-4.0.0.tar.xz
  apply musl.diff
  tree c08b3212ba5960973b9133cdfc47c9153269155fd3bff9b2c3e9af9a8be6d32c
}

config-extra --disable-{kill,modern-top,shared} --enable-watch8bit

post-install() {
  rm -f -r /dst/bin/w /dst/lib/{include,libprocps.a,man/man1/w.1,pkgconfig}
}
