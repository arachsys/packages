mode autotools

check() {
  url https://ftp.gnu.org/gnu/readline/
  match version 8.2 'readline-([0-9.]+)\.tar\.gz'
}

prepare() {
  unpack https://ftp.gnu.org/gnu/readline/readline-8.2.tar.gz
  apply config.diff
  apply rpath.diff
  tree c8cff8feee78f55fd60206fe64982e926437705e52ef1fbaeb42af68de10dc2c
}

config-extra --disable-install-examples
compile-extra SHLIB_LIBS=-lncurses
