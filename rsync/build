mode autotools

check() {
  url https://download.samba.org/pub/rsync/
  match version 3.2.6 'rsync-([0-9.]+)\.tar'

  url https://github.com/Cyan4973/xxHash/releases
  match xxhash 0.8.1 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://download.samba.org/pub/rsync/rsync-3.2.6.tar.gz
  unpack -d xxhash xxhash-0.8.1.tar.gz \
    https://github.com/Cyan4973/xxHash/archive/refs/tags/v0.8.1.tar.gz
  apply paths.diff
  tree 127cb17d14e006194c4686ac07ae20910dd2f93ffa611049b660eb6c0706aaaa
}

pre-config() {
  make -C xxhash libxxhash.a
}

config-extra --disable-lz4 --enable-xxhash --with-included-popt \
  --without-included-zlib CPPFLAGS=-I/src/xxhash LDFLAGS=-L/src/xxhash

post-install() {
  rm -f /dst/{bin/rsync-ssl,lib/man/man1/rsync-ssl.1}
}
