mode autotools

check() {
  url https://download.samba.org/pub/rsync/
  match version 3.2.4 'rsync-([0-9.]+)\.tar'
}

prepare() {
  unpack https://download.samba.org/pub/rsync/rsync-3.2.4.tar.gz
  apply paths.diff
  tree 3c935d16c514575c42433f80e719fbeaa10f81086917d407b09b53801374fbad
}

config-extra --disable-lz4 --disable-xxhash --with-included-popt

post-install() {
  rm -f /dst/{bin/rsync-ssl,lib/man/man1/rsync-ssl.1}
}
