mode autotools
require libffi

if [[ $CHOST == @(aarch64|amd64|x86_64)* ]]; then
  require rust
  config-extra LIBS=-lunwind
fi

check() {
  url https://www.ruby-lang.org/en/downloads/
  match version 3.2.1 'ruby-([0-9.]+)\.tar'

  url https://github.com/yaml/libyaml/tags
  match version 0.2.5 'tags/([0-9.]+)\.tar'
}

prepare() {
  unpack https://cache.ruby-lang.org/pub/ruby/3.2/ruby-3.2.1.tar.gz
  unpack -d libyaml \
    https://github.com/yaml/libyaml/releases/download/0.2.5/yaml-0.2.5.tar.gz
  apply irb.diff
  apply paths.diff
  apply plain.diff
  tree 8c8135faf76e6788b20afff6a84c9bb3d8a2890d319413925d8c2674da9ef6cd
}

config-extra --disable-install-doc  --disable-rpath --enable-shared \
  --with-libyaml-source-dir=/src/libyaml --with-ridir=/lib/ruby/doc \
  --with-ruby{arch,}hdrdir=/lib/include \
  --with-ruby{arch,lib}prefix=/lib/ruby \
  --with-{site,vendor}{archdir,archhdrdir,dir,hdrdir}=no

post-install() {
  rm -f /dst/lib/include/rb_mjit_min_header-*.h
  image - requires libffi
}
