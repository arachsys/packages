mode autotools
require libffi

check() {
  url https://cache.ruby-lang.org/pub/ruby/3.0/
  match version 3.0.3 'ruby-([0-9.]+)\.tar'
}

prepare() {
  unpack https://cache.ruby-lang.org/pub/ruby/3.0/ruby-3.0.3.tar.gz
  apply irb.diff
  apply paths.diff
  apply plain.diff
  tree 80eec2f4c7b8b2e28b1934e35277d9f611ea2124ddff656a70a59eafba24c6d4
}

config-extra --disable-install-doc  --disable-rpath --enable-shared \
  --with-ridir=/lib/ruby/doc --with-ruby{arch,}hdrdir=/lib/include \
  --with-ruby{arch,lib}prefix=/lib/ruby \
  --with-{site,vendor}{archdir,archhdrdir,dir,hdrdir}=no

post-install() {
  rm -f /dst/lib/include/rb_mjit_min_header-*.h
  image - requires libffi
}
