mode autotools
enable setuid setgid

check() {
  url https://github.com/shadow-maint/shadow/releases
  match version 4.11.1 'shadow-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/shadow-maint/shadow/releases/download/v4.11.1/shadow-4.11.1.tar.xz
  apply bcrypt.diff
  apply idmap.diff
  apply nss.diff
  apply paths.diff
  tree 8ec4bde40f833863cdc57af7e7b2d5b45b9bb4c8c886da0d1c885895df8935ba
}

config-extra --disable-shared --without-{audit,libpam} --with-bcrypt

post-config() {
  sed -e 's:^\(#define FAILLOG_FILE\).*:\1 "/dev/null":' \
      -e 's:^\(#define LASTLOG_FILE\).*:\1 "/dev/null":' \
      -e 's:^\(#define _UTMP_FILE\).*:\1 "/dev/null":' \
      -e 's:^\(#define _WTMP_FILE\).*:\1 "/dev/null":' \
      -i config.h
}

post-install() {
  chgrp shadow /dst/bin/{chage,expiry}
  chmod u-s,g+s /dst/bin/{chage,expiry}
  rm -f /dst/bin/{chfn,faillog,groups,lastlog,logoutd}
  rm -f /dst/lib/man/man*/{chfn,faillog,groups,lastlog,logoutd}.*
  rm -f -r /dst/lib/include /dst/lib/*.a
}
