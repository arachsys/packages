check() {
  url https://www.sqlite.org/index.html
  match version 3.50.3 'Version ([0-9.]*[0-9])'
}

prepare() {
  unpack sqlite-3.50.3.tar.gz \
    https://www.sqlite.org/2025/sqlite-autoconf-3500300.tar.gz
  tree 1ae0206557bfa5f6d2ad3f1bc5b85e16982d3dd00549dde09da0fb73b72a8cba
}

build() {
  /src/configure --prefix= --all --disable-static-shell
  make install DESTDIR=/dst LDFLAGS.rpath= datadir='${prefix}/lib' \
    includedir='${prefix}/lib/include'
}
