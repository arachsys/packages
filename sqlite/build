mode autotools

check() {
  url https://www.sqlite.org/index.html
  match version 3.38.0 'Version ([0-9.]*[0-9])'
}

prepare() {
  unpack sqlite-3.38.0.tar.gz \
    https://www.sqlite.org/2022/sqlite-autoconf-3380000.tar.gz
  tree b67c1e751537936eaa68535746e5ca27b4f7a4a1f5c52911cbc0f1477e917bee
}

config-extra --disable-static-shell
