check() {
  url https://www.sqlite.org/index.html
  match version 3.51.2 'Version ([0-9.]*[0-9])'
}

prepare() {
  unpack sqlite-3.51.2.tar.gz \
    https://www.sqlite.org/2026/sqlite-autoconf-3510200.tar.gz
  tree e4b182837f5268835393ec04e2fc388220e85bd9a1928e147a72b234187a8ae2
}

build() {
  /src/configure --prefix= --all --disable-static-shell
  make install DESTDIR=/dst LDFLAGS.rpath= datadir='${prefix}/lib' \
    includedir='${prefix}/lib/include'
}
