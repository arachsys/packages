check() {
  url https://www.sqlite.org/index.html
  match version 3.51.0 'Version ([0-9.]*[0-9])'
}

prepare() {
  unpack sqlite-3.51.0.tar.gz \
    https://www.sqlite.org/2025/sqlite-autoconf-3510000.tar.gz
  tree 772d720c74b08e21773ef57d9fd8b4f31402949bdcb3a6559c50154bf87e2828
}

build() {
  /src/configure --prefix= --all --disable-static-shell
  make install DESTDIR=/dst LDFLAGS.rpath= datadir='${prefix}/lib' \
    includedir='${prefix}/lib/include'
}
