check() {
  url https://www.sqlite.org/index.html
  match version 3.50.1 'Version ([0-9.]*[0-9])'
}

prepare() {
  unpack sqlite-3.50.1.tar.gz \
    https://www.sqlite.org/2025/sqlite-autoconf-3500100.tar.gz
  tree e73fe44ba4f33364041549f666473fec765bc6fec370db155e6befd917818dd9
}

build() {
  /src/configure --prefix= --all --disable-static-shell
  make install DESTDIR=/dst LDFLAGS.rpath= datadir='${prefix}/lib' \
    includedir='${prefix}/lib/include'
}
