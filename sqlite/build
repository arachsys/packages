check() {
  url https://www.sqlite.org/index.html
  match version 3.51.1 'Version ([0-9.]*[0-9])'
}

prepare() {
  unpack sqlite-3.51.1.tar.gz \
    https://www.sqlite.org/2025/sqlite-autoconf-3510100.tar.gz
  tree 9fea545577502866230db862dc591245563a76e1f2f55a5cb222479dcb5da4da
}

build() {
  /src/configure --prefix= --all --disable-static-shell
  make install DESTDIR=/dst LDFLAGS.rpath= datadir='${prefix}/lib' \
    includedir='${prefix}/lib/include'
}
