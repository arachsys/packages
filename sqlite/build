check() {
  url https://www.sqlite.org/index.html
  match version 3.44.1 'Version ([0-9.]*[0-9])'
}

prepare() {
  unpack sqlite-3.44.1.tar.gz \
    https://www.sqlite.org/2023/sqlite-autoconf-3440100.tar.gz
  tree d4c4cf08f7003764222c082de5f7a926309ccbc00fd8af7defee827bffc1e60f
}

build() {
  auto-config --disable-static-shell
  make install DESTDIR=/dst
}
