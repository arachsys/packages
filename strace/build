check() {
  url https://github.com/strace/strace/tags
  match version 6.9 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/6.9/strace-6.9.tar.xz
  tree a827b77465b4ec4629b28fbf090bf50822ef2bb49d836e9495745e7c9c453efd
}

build() {
  auto-config --disable-gcc-Werror --disable-mpers --enable-bundled
  make install DESTDIR=/dst
  rm -f /dst/bin/strace-{graph,log-merge}
}
