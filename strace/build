check() {
  url https://github.com/strace/strace/tags
  match version 6.7 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/6.7/strace-6.7.tar.xz
  tree 98fe6e2d3b685bbf44f5e7c9145ad49daf75bee8eaa7f8d3c8cf94ec0aeab327
}

build() {
  auto-config --disable-gcc-Werror --disable-mpers --enable-bundled
  make install DESTDIR=/dst
  rm -f /dst/bin/strace-{graph,log-merge}
}
