check() {
  url https://github.com/strace/strace/tags
  match version 6.16 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/6.16/strace-6.16.tar.xz
  tree a102ecc796e19e134101d798bb9f8813b6c9e7fc9c82d16c0a9994f1932ac164
}

build() {
  auto-config --disable-bundled --disable-gcc-Werror --disable-mpers
  make install DESTDIR=/dst
  rm -f /dst/bin/strace-{graph,log-merge}
}
