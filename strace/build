mode autotools

check() {
  url https://github.com/strace/strace/tags
  match version 6.3 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/6.3/strace-6.3.tar.xz
  tree d0d0c64ff9a31e8555433dd00ed67f596b6d2c66622f46ddc781536bb5d97fe8
}

config-extra --disable-gcc-Werror --disable-mpers --enable-bundled

post-install() {
  rm -f /dst/bin/strace-{graph,log-merge}
}
