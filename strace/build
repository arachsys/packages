mode autotools

check() {
  url https://github.com/strace/strace/tags
  match version 6.2 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/6.2/strace-6.2.tar.xz
  tree 929daceef69014156d3b4bd3522a6a7ed2fe82d8d9d8c617b2a68357b126f11d
}

config-extra --disable-gcc-Werror --disable-mpers

post-install() {
  rm -f /dst/bin/strace-{graph,log-merge}
}
