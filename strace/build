mode autotools

check() {
  url https://github.com/strace/strace/releases
  match version 5.17 'strace-([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/5.17/strace-5.17.tar.xz
  tree 597b8a14a68d7b9d02f5c612b981dccd514b7af0b1dc9075e9636310ce4d2b77
}

config-extra --disable-gcc-Werror --disable-mpers

post-install() {
  rm -f /dst/bin/strace-{graph,log-merge}
}
