mode autotools

check() {
  url https://github.com/strace/strace/releases
  match version 5.15 'strace-([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/5.15/strace-5.15.tar.xz
  tree 81bb31751423f1b381e51bd3654d39e1f9a6e37dd51ae5499158a7939a17e672
}

config-extra --disable-gcc-Werror --disable-mpers

post-install() {
  rm -f /dst/bin/strace-{graph,log-merge}
}
