check() {
  url https://github.com/strace/strace/tags
  match version 6.18 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/6.18/strace-6.18.tar.xz
  tree 6b371af4dcde7fa872a2580e538de682f6dadf8cdf69b4583b2d77f20ef52fc0
}

build() {
  auto-config --disable-gcc-Werror --disable-mpers
  make install DESTDIR=/dst
  rm -f /dst/bin/strace-{graph,log-merge}
}
