mode autotools

check() {
  url https://github.com/strace/strace/tags
  match version 6.0 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/6.0/strace-6.0.tar.xz
  tree 134aa820e5ab7a51b949f074b7d18eac4f741294dd1038c66f67928da7e5f4a8
}

config-extra --disable-gcc-Werror --disable-mpers

post-install() {
  rm -f /dst/bin/strace-{graph,log-merge}
}
