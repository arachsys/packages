mode autotools

check() {
  url https://github.com/strace/strace/releases
  match version 5.19 'strace-([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/5.19/strace-5.19.tar.xz
  tree 842c441758d5a0c82b3a98bc602656f5e5f1f888f828fb90a105a5624df603ef
}

config-extra --disable-gcc-Werror --disable-mpers

post-install() {
  rm -f /dst/bin/strace-{graph,log-merge}
}
