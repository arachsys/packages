mode autotools

check() {
  url https://github.com/strace/strace/releases
  match version 5.18 'strace-([0-9.]+)\.tar'
}

prepare() {
  unpack https://strace.io/files/5.18/strace-5.18.tar.xz
  tree 3d44891d8cb9d1d1af56dc464ebac12f7a11f9b93f625af80307fc7afd3188b4
}

config-extra --disable-gcc-Werror --disable-mpers

post-install() {
  rm -f /dst/bin/strace-{graph,log-merge}
}
