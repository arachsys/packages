name procps
version 3.3.11
mode autotools

prepare() {
  unpack http://http.debian.net/debian/pool/main/p/procps/procps_$VERSION.orig.tar.xz procps-3.3.11.tar.xz
  apply ps.patch
  apply watch.patch
}

config-extra --disable-{kill,pidof,shared} --enable-watch8bit

post-install() {
  rm -f -r $DST/lib/{include,libprocps.a,pkgconfig}
}
