name ruby
version 2.2.2
mode autotools
sources http://cache.ruby-lang.org/pub/ruby/${VERSION%.*}/ruby-$VERSION.tar.gz \
        paths.patch

config-extra --disable-rpath --enable-shared --with-ruby-pc=ruby.pc \
             --with-ridir='${datarootdir}/doc/ruby'

if ! enabled docs; then
  config-extra --disable-install-doc
fi

post-config() {
  touch $SRC/prelude.c
}
