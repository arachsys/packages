mode autotools
require libpcap

check() {
  url https://www.tcpdump.org/release/
  match version 4.99.1 'tcpdump-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.tcpdump.org/release/tcpdump-4.99.1.tar.gz
  tree 0c60439a0201f39010dd5b8a2a537b3fa9941fdd5d677e562d914fcebfc62533
}

post-install() {
  rm -f /dst/bin/tcpdump.*
  image - requires libpcap
}
