require libpcap

check() {
  url https://www.tcpdump.org/release/
  match version 4.99.6 'tcpdump-([0-9.]+)\.tar'
}

prepare() {
  unpack https://www.tcpdump.org/release/tcpdump-4.99.6.tar.gz
  tree 6853b2713a3b52bb37dd0423df2582b1de5ad5d4a0565991d91b8e4f0d4a8404
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/bin/tcpdump.*
  image - requires libpcap
}
