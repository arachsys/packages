require go

check() {
  url https://api.github.com/repos/arachsys/tinyacme/branches/master
  match snapshot 20220101 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack tinyacme-20220101-60926804.tar.gz \
    https://github.com/arachsys/tinyacme/archive/60926804a4529a6370363ea14a4f3279aa303cb1.tar.gz
  GOPATH=/tmp/go HOME=/tmp go mod vendor
  tree 61299f2580e604b77a978d024e97993e310b116c1300427d3e9356c5b19c5f98
}

build() {
  GOPATH=/tmp/go HOME=/tmp go build acmeproxy.go
  GOPATH=/tmp/go HOME=/tmp go build tinyacme.go
  install -D -t /dst/bin acmeproxy tinyacme
}
