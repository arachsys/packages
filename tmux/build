mode autotools
require libevent

check() {
  url https://github.com/tmux/tmux/releases
  match version 3.3a 'tmux-([0-9.]+[a-z]?)\.tar'
}

prepare() {
  unpack https://github.com/tmux/tmux/releases/download/3.3a/tmux-3.3a.tar.gz
  tree 63928cdad8b981bb47a0a33c9102ef78d1269ff91e8ba521abd203ca9287f68f
}

post-config() {
  sed -i 's:-l\(event[^ ]*\):/lib/static/lib\1.a:g' Makefile
}
