require bison libevent

check() {
  url https://github.com/tmux/tmux/tags
  match version 3.5 'tags/([0-9.]+[a-z]?)\.tar'
}

prepare() {
  unpack https://github.com/tmux/tmux/releases/download/3.5/tmux-3.5.tar.gz
  tree 883c83d6be0ab4b313d23a570dec0af1d169f2abcfb48b0884258e4c592fd153
}

build() {
  auto-config
  sed -i 's/-l\(event[^ ]*\)/-l:lib\1.a/g' Makefile
  make install DESTDIR=/dst
}
