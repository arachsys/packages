require bison libevent

check() {
  url https://github.com/tmux/tmux/tags
  match version 3.6 'tags/([0-9.]+[a-z]?)\.tar'
}

prepare() {
  unpack https://github.com/tmux/tmux/releases/download/3.6/tmux-3.6.tar.gz
  tree e5fdc39ddd6ba281d19a28a4966ac0f523e1b08d44a82af5a4556c3e0863522c
}

build() {
  auto-config
  sed -i 's/-l\(event[^ ]*\)/-l:lib\1.a/g' Makefile
  make install DESTDIR=/dst
}
