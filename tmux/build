require bison libevent

check() {
  url https://github.com/tmux/tmux/tags
  match version 3.6a 'tags/([0-9.]+[a-z]?)\.tar'
}

prepare() {
  unpack https://github.com/tmux/tmux/releases/download/3.6a/tmux-3.6a.tar.gz
  tree f65fbdd2d96c78acd099bd5eb10011b79dd1a8f2b928cd046c7f0ce89341c557
}

build() {
  auto-config
  sed -i 's/-l\(event[^ ]*\)/-l:lib\1.a/g' Makefile
  make install DESTDIR=/dst
}
