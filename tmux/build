mode autotools
require libevent

check() {
  url https://github.com/tmux/tmux/releases
  match version 3.3 'tmux-([0-9.]+[a-z]?)\.tar'
}

prepare() {
  unpack https://github.com/tmux/tmux/releases/download/3.3/tmux-3.3.tar.gz
  tree 9c5855b1cf32b8ff2cf8b9e916723252e86730c8606d031911110c74bc753c41
}

post-config() {
  sed -i 's:-l\(event[^ ]*\):/lib/static/lib\1.a:g' Makefile
}
