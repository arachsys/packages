require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.8.21 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.8.21.tar.gz
  apply cosmetic.diff
  apply config.diff
  tree 9bd115c277c4066f7416d3ba60e40d540c7cc225163dead38b88373cec07c823
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    CPPFLAGS=-DDISABLE_ENGINES {LZMA,ZSTD}_CFLAGS=-I/lib/include \
    LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's/-levent/-l:libevent.a/g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
