require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.8.8 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.8.8.tar.gz
  apply cosmetic.diff
  apply config.diff
  tree b81c66a1c762146c756121b3eadc9c724ed655793cc287c63895b94cdae3f158
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    CPPFLAGS=-DDISABLE_ENGINES {LZMA,ZSTD}_CFLAGS=-I/lib/include \
    LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's:-levent:/lib/static/libevent.a:g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
