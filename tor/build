require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.8.22 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.8.22.tar.gz
  apply cosmetic.diff
  apply config.diff
  tree cc90bc2521ce217f2468bf1fb032da270065f71044673ea41ed2579919dbf73f
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    CPPFLAGS=-DDISABLE_ENGINES {LZMA,ZSTD}_CFLAGS=-I/lib/include \
    LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's/-levent/-l:libevent.a/g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
