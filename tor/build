require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.8.4 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.8.4.tar.gz
  apply cosmetic.diff
  apply config.diff
  tree f83492e61f12304f6333939a189022c8b6f46eff07f172830c8b7791dbed4fd0
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    {LZMA,ZSTD}_CFLAGS=-I/lib/include LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's:-levent:/lib/static/libevent.a:g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
