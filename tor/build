require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.9.5 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.9.5.tar.gz
  apply cosmetic.diff
  apply config.diff
  tree 693f48521f00c7bb34a8b4db49c549390194a78f4092240ab7959ae9422e7952
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    CPPFLAGS=-DDISABLE_ENGINES {LZMA,ZSTD}_CFLAGS=-I/lib/include \
    LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's/-levent/-l:libevent.a/g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
