require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.8.18 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.8.18.tar.gz
  apply cosmetic.diff
  apply config.diff
  tree 33ff89a3dd107f138bc12a1a5a466babf8beb33010f28677d78473a7b3d89eec
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    CPPFLAGS=-DDISABLE_ENGINES {LZMA,ZSTD}_CFLAGS=-I/lib/include \
    LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's/-levent/-l:libevent.a/g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
