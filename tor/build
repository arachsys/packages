require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.8.6 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.8.6.tar.gz
  apply cosmetic.diff
  apply config.diff
  tree af35642f30199adf39704bfa5f7b81eee0715ef9fc46415c0418eb90f5cd2086
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    CPPFLAGS=-DDISABLE_ENGINES {LZMA,ZSTD}_CFLAGS=-I/lib/include \
    LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's:-levent:/lib/static/libevent.a:g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
