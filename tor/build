mode autotools
require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.6.8 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.6.8.tar.gz
  tree ace50cbc0c34bf2d76b7fef241023d3fa370073c04c36204937f720dd2f1d9e8
}

config-extra --enable-lzma --enable-static-libevent --enable-zstd \
  --with-libevent-dir=/lib/static CONFDIR=/etc

post-install() {
  rm -f /dst/bin/torify
}
