require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.8.9 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.8.9.tar.gz
  apply cosmetic.diff
  apply config.diff
  tree 6f18bdce3bdd2ed0761475c99d9248850e61b50a781562f5da62e06d6783ee6a
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    CPPFLAGS=-DDISABLE_ENGINES {LZMA,ZSTD}_CFLAGS=-I/lib/include \
    LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's:-levent:/lib/static/libevent.a:g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
