require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.8.7 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.8.7.tar.gz
  apply cosmetic.diff
  apply config.diff
  tree 7083948f8d3c362200c528bc099e7b5981da075958ff2d9de67fb5b4cfe20017
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    CPPFLAGS=-DDISABLE_ENGINES {LZMA,ZSTD}_CFLAGS=-I/lib/include \
    LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's:-levent:/lib/static/libevent.a:g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
