require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.8.5 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.8.5.tar.gz
  apply cosmetic.diff
  apply config.diff
  tree dadd6eb0152080f7caa216a199f352c937883f49d1c4f8ad13370ba4d3c01cd0
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    {LZMA,ZSTD}_CFLAGS=-I/lib/include LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's:-levent:/lib/static/libevent.a:g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
