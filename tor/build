require libevent

check() {
  url https://dist.torproject.org/
  match version 0.4.7.14 'tor-([0-9.]+)\.tar'
}

prepare() {
  unpack https://dist.torproject.org/tor-0.4.7.14.tar.gz
  apply cosmetic.diff
  apply config.diff
  apply libressl.diff
  tree 92d5a9c3d1c2c5471e7176d86e8fe67ffd628db09d8d98ba48f0d3ca3e2e1314
}

build() {
  auto-config --enable-lzma --enable-zstd CONFDIR=/etc \
    {LZMA,ZSTD}_CFLAGS=-I/lib/include LZMA_LIBS=-llzma ZSTD_LIBS=-lzstd
  sed -i 's:-levent:/lib/static/libevent.a:g' Makefile
  make install DESTDIR=/dst
  rm -f /dst/bin/torify
}
