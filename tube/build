check() {
  url https://api.github.com/repos/arachsys/tube/branches/master
  match snapshot 20220627 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack tube-20220627-25676be8.tar.gz \
    https://github.com/arachsys/tube/archive/25676be8.tar.gz
  tree 869b3d3addb81c8e5eb27102e4e52f8e2bfb0abab59e5dbb5a87389a0adb340f
}

build() {
  if [[ $CHOST == aarch64-* ]]; then
    make install DESTDIR=/dst CFLAGS='-mcpu=native -O3 -Wall -Wfatal-errors'
  else
    make install DESTDIR=/dst
  fi
}
