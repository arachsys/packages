enable setuid

check() {
  url https://api.github.com/repos/arachsys/arachsys-utils/branches/master
  match snapshot 20260102 \
    '"date": *"([0-9]{4})-([0-9]{2})-([0-9]{2})' '\1\2\3'
}

prepare() {
  unpack arachsys-utils-20260102-2db353f7.tar.gz \
    https://github.com/arachsys/arachsys-utils/archive/2db353f7.tar.gz
  tree 253396ff0671bcfc57a5c9cb4f544e1b95fd8e20f52f1fb779f4a9267c172450
}

build() {
  make -C host install DESTDIR=/img/host-utils
  make -C user install DESTDIR=/img/user-utils
}
