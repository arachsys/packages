check() {
  url https://github.com/vim/vim/tags
  match version '9.0.21??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.2100.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.2100.tar.gz
  apply paths.diff
  tree bb22fefd30fcdbcd836d99027ae5586acb00581168bdcbd6e182ed92915833f5
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
