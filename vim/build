check() {
  url https://github.com/vim/vim/tags
  match version '9.0.17??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1787.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1787.tar.gz
  apply paths.diff
  tree 6806083bd2bf9dcee94b71e394cdcadf3ad1b88a14cc5c32aff4859799dddbc2
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
