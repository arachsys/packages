mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.1062 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1062.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1062.tar.gz
  apply paths.diff
  tree 84996c6e9ae8ec649ab9408e3296cbe01e8449928b6172567a909201bb63435e
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
