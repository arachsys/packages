check() {
  url https://github.com/vim/vim/tags
  match version '9.1.17??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.1701.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.1701.tar.gz
  apply paths.diff
  tree 88f849433077c0f36088509b6caf0876e479908a3ff3eea1400fad4e612d7bbb
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
