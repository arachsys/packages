check() {
  url https://github.com/vim/vim/tags
  match version '9.1.03??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.0301.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.0301.tar.gz
  apply paths.diff
  tree b2301f68da4fe2766393951fedf3066e3db0371c37af67f565e796d91ba2472e
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
