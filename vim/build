mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0015 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0015.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0015.tar.gz
  apply paths.diff
  tree 8746b524dbea2306b22bfed530be238ff4dfe1178e06c86b439abc7ac5cf4e8a
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/{rview,rvim,vimtutor} /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
