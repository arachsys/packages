check() {
  url https://github.com/vim/vim/tags
  match version '9.0.19??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1902.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1902.tar.gz
  apply paths.diff
  tree 8d1180eab591638587123fc9dcb4360132a1fdad834589ad905103e30b06a4bb
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
