mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0555 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0555.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0555.tar.gz
  apply paths.diff
  tree da619d30684ad4372942bde52d3435373dbf9211957054988a1b190525a2f29a
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
