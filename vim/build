check() {
  url https://github.com/vim/vim/tags
  match version '9.1.00??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.0000.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.0000.tar.gz
  apply paths.diff
  tree 80da6edd1c49ea5795a1ab491f1631f2e616313974d01ba37e0b72bb1b252b28
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
