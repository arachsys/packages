check() {
  url https://github.com/vim/vim/tags
  match version '9.1.10??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.1000.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.1000.tar.gz
  apply paths.diff
  tree 223dfbcb4dcf65c24b4d2fb4c7028d83854ecd098bdf3be3352bb5699285f88a
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
