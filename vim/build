mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0193 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0193.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0193.tar.gz
  apply paths.diff
  tree eeb6e6201ba963385e74e7f0da693cd852be3cc67cd1d8d6f7e4e3bc8d869a6d
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/{rview,rvim,vimtutor} /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
