check() {
  url https://github.com/vim/vim/tags
  match version '9.0.18??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1832.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1832.tar.gz
  apply paths.diff
  tree b47a12c88a61d35a8055a69e5d977d9552f9867ef5b847f51b0c6730db3975d2
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
