mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0820 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0820.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0820.tar.gz
  apply paths.diff
  tree 45678063f52596427ae1e5bc588b66c393c24bcb59b087b5f89db21b06dc15d3
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
