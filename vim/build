mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.1121 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1121.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1121.tar.gz
  apply paths.diff
  tree 386817b1d16632e6c47433e17cedd08977e7176c4b09a130f9329e173bf06082
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
