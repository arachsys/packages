check() {
  url https://github.com/vim/vim/tags
  match version '9.2.00??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.2.0010.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.2.0010.tar.gz
  apply paths.diff
  tree 19f9865ed6291d86a2e7dc6d879ed0c6ab59f04bf71f358062f5d9c80deeb3b5
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
