check() {
  url https://github.com/vim/vim/tags
  match version '9.1.05??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.0500.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.0500.tar.gz
  apply paths.diff
  tree 2b56ecc54bccee148f603477b460a1dccb3dbf4d261a536121f18cba6d533452
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
