mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0135 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0135.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0135.tar.gz
  apply paths.diff
  tree f9cf461dc8968e8d2d79eb034ac82581ec5d4690d515ee9d24ddccfb473ec326
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/{rview,rvim,vimtutor} /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
