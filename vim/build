check() {
  url https://github.com/vim/vim/tags
  match version '9.1.20??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.2000.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.2000.tar.gz
  apply paths.diff
  tree c2793d43d8a1340a3fbcc63bc4d3e5b4caeefcfa1a9516d5570160d407228d1b
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
