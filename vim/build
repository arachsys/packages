mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0734 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0734.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0734.tar.gz
  apply paths.diff
  tree f66b13ac9d41fe248b7312d1aab78af2e47442cc48db0711159a11f41cfe89de
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
