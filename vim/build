mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version '9.0.15??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1564.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1564.tar.gz
  apply paths.diff
  tree d1e2f54faac116f23aa0102376fd1ee4e616b157f5ee4a631c0e01d90c25f05e
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
