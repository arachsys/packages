mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.1291 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1291.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1291.tar.gz
  apply paths.diff
  tree 33e8827c496aaf65a40c9d6b678d44f2cd0c7a0762f32305e624ccae40a21c15
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
