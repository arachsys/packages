mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.1180 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1180.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1180.tar.gz
  apply paths.diff
  tree ad5d38976e14ea84927318dd131493b70865d5e77c3977e9e7dace80c2a9f96d
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
