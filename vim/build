check() {
  url https://github.com/vim/vim/tags
  match version '9.1.19??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.1901.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.1901.tar.gz
  apply paths.diff
  tree e9f580b17a6170a676118789e2a4b97bf74f87ef067380f2583f6c001034bbf4
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
