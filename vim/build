mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0316 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0316.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0316.tar.gz
  apply paths.diff
  tree cbd6beb14ad556cdb9ccf343626bf30e28b68072f153af5817842ed064d34733
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
