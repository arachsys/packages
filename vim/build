check() {
  url https://github.com/vim/vim/tags
  match version '9.0.20??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.2009.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.2009.tar.gz
  apply paths.diff
  tree e1137e53a12432b3c4aa777978d3bd63267484090b4ac9db9a2e71beffec2aae
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
