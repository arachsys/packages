mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.1199 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1199.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1199.tar.gz
  apply paths.diff
  tree 81ef7ee59ad80584759be97888406cad781ffd2c7255d7dbf5e760b8b8ff5eed
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
