mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.1442 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1442.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1442.tar.gz
  apply paths.diff
  tree 45e0e6047daae5cabfdeb319ec81ccbed9e54269d845f5fe05df347d7d369cdb
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
