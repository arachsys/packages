mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0861 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0861.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0861.tar.gz
  apply paths.diff
  tree 7a75c44e3f707076d84a2e40db76976ec14287b20f03c1d3f360279ed31ac4d0
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
