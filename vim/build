mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0173 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0173.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0173.tar.gz
  apply paths.diff
  tree 44067bbb41e43846465901e37c2ec0594339a076cce9aa881ebd39f423fb5600
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/{rview,rvim,vimtutor} /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
