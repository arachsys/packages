check() {
  url https://github.com/vim/vim/tags
  match version '9.1.16??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.1610.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.1610.tar.gz
  apply paths.diff
  tree 1408bad5eb289290104ae5ed36e30a199753384fe62577741a2cc7efb3849326
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
