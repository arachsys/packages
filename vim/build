mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0390 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0390.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0390.tar.gz
  apply paths.diff
  tree ae9c0c9a44b62c14805e77908003e7dbd5d6f5f70e67ba42ebc09cff0aad55a5
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
