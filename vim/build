mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0213 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0213.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0213.tar.gz
  apply paths.diff
  tree 91fc6b1e95529d4e66dcf0f5bcfe20ea82b26faadc321e004ae489403cf9f559
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/{rview,rvim,vimtutor} /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
