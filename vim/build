mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.1482 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1482.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1482.tar.gz
  apply paths.diff
  tree 7fb85482856e44a75ee0fe5e52c1157293167ea12cc437f980eac30db50b38b6
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
