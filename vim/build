mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0354 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0354.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0354.tar.gz
  apply paths.diff
  tree 9e691cdf3b3778fa2ae4c19a881fd99a1e84aaaaec67120803f4f6105552674b
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
