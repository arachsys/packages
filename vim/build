mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0055 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0055.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0055.tar.gz
  apply paths.diff
  tree 90e66e0a01bf1807f675fc90638e218c00ed012f0c4584229cca9572ecc9068f
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/{rview,rvim,vimtutor} /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
