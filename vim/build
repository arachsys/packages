check() {
  url https://github.com/vim/vim/tags
  match version '9.1.18??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.1810.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.1810.tar.gz
  apply paths.diff
  tree 1f8f5b104aa86bc1e33fc05d7ce8d23abc5c466a82cef5b4c8120c7dabe63ce5
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
