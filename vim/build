mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0844 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0844.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0844.tar.gz
  apply paths.diff
  tree 26048296643045195cc99d4e3f15a2f82dc858e411986ea9d9d22216a2c8e866
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
