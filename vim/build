check() {
  url https://github.com/vim/vim/tags
  match version '9.0.16??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.1677.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.1677.tar.gz
  apply paths.diff
  tree 5730410ba091ab056229eaae40a655f7dd8b40710b7bcfeed9217312b7b68544
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
