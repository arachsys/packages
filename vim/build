check() {
  url https://github.com/vim/vim/tags
  match version '9.1.04??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.0400.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.0400.tar.gz
  apply paths.diff
  tree c711472c2329e31b4a401df2c0be53dcc9c68fe257608a55b97c1e61052334a7
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
