check() {
  url https://github.com/vim/vim/tags
  match version '9.1.01??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.0100.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.0100.tar.gz
  apply paths.diff
  tree 034029c829723afcc48cf21fa7534d5ccb66c5e7efbebf3e2e9e26d16cd121c4
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
