mode autotools

check() {
  url https://github.com/vim/vim/tags
  match version 9.0.0057 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.0.0057.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.0.0057.tar.gz
  apply paths.diff
  tree 756aa8950ea4430d689e066fe8dcbaaff52f62d7e04c9bafd696b8c6bac429a8
}

config-extra --enable-{multibyte,terminal} --without-local-dir
compile-extra VIMRTLOC=/lib/vim
install-extra VIMRTLOC=/lib/vim

post-install() {
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/{rview,rvim,vimtutor} /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
