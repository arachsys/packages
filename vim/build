check() {
  url https://github.com/vim/vim/tags
  match version '9.1.21??' 'v([0-9.]+)\.tar'
}

prepare() {
  unpack vim-9.1.2103.tar.gz \
    https://github.com/vim/vim/archive/refs/tags/v9.1.2103.tar.gz
  apply paths.diff
  tree 293757d12602136a1d7aa93466873da7344a5a9bf8627f454ed7715270eba7dd
}

build() {
  auto-config --enable-{multibyte,terminal} --without-local-dir
  make install DESTDIR=/dst VIMRTLOC=/lib/vim
  ln -s vim /dst/bin/vi
  rm -r /dst/bin/vimtutor /dst/lib/{applications,icons} \
    /dst/lib/vim/{**/README.*,*_example.vim,tools}
}
