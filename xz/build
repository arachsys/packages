mode autotools

check() {
  url https://tukaani.org/xz/
  match version 5.2.8 'xz-([0-9.]+)\.tar'
}

prepare() {
  unpack https://tukaani.org/xz/xz-5.2.8.tar.xz
  tree 17a126a3aeff052529d3e590da34b2c2e3c2cccbaddbb074f91d38535ce4568e
}

post-install() {
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
