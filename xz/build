check() {
  url https://github.com/tukaani-project/xz/tags
  match version 5.6.0 'v([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/tukaani-project/xz/releases/download/v5.6.0/xz-5.6.0.tar.xz
  tree 17ee4bca349b7686f8b6c55d4ffd1ff76bf7f42c90630a27f657709f118f8cb6
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
