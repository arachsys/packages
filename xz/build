mode autotools

check() {
  url https://tukaani.org/xz/
  match version 5.4.1 'xz-([0-9.]+)\.tar'
}

prepare() {
  unpack https://tukaani.org/xz/xz-5.4.1.tar.xz
  tree 0b8a0840629eea856e9f061787327b4487531d3e3c84a4dfd9bbc1efc6f1f0c8
}

post-install() {
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
