check() {
  url https://tukaani.org/xz/
  match version 5.4.5 'xz-([0-9.]+)\.tar'
}

prepare() {
  unpack https://tukaani.org/xz/xz-5.4.5.tar.xz
  tree 758a921c7699b00f2194a5b9412c4d5338a3fa547ede98a331399db9b75a3eed
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
