check() {
  url https://tukaani.org/xz/
  match version 5.4.4 'xz-([0-9.]+)\.tar'
}

prepare() {
  unpack https://tukaani.org/xz/xz-5.4.4.tar.xz
  tree 75322b293993a45431ddf30d1b0157c098671923aa2104c090bed2521b724e1f
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
