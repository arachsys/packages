mode autotools

check() {
  url https://tukaani.org/xz/
  match version 5.2.9 'xz-([0-9.]+)\.tar'
}

prepare() {
  unpack https://tukaani.org/xz/xz-5.2.9.tar.xz
  tree a9b28fbe75ae1533c420c83622812e8b1f060e0911800e3a933e1cfa12be7772
}

post-install() {
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
