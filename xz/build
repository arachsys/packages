mode autotools

check() {
  url https://tukaani.org/xz/
  match version 5.2.6 'xz-([0-9.]+)\.tar'
}

prepare() {
  unpack https://tukaani.org/xz/xz-5.2.6.tar.xz
  tree e708d49fae3e44938f99f742d0cb5118a5fb78d7874f4760ef54989889513eb9
}

post-install() {
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
