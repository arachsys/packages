check() {
  url https://github.com/tukaani-project/xz/tags
  match version 5.8.2 'v([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/tukaani-project/xz/releases/download/v5.8.2/xz-5.8.2.tar.xz
  tree 9511dbebc6fcaaa2940fcdd37e72a7912fd9d8e8c74b67a10180e2c4c1130c00
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
