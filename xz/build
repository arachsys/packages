check() {
  url https://github.com/tukaani-project/xz/tags
  match version 5.4.6 'v([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/tukaani-project/xz/releases/download/v5.4.6/xz-5.4.6.tar.xz
  tree f338f1412f4b4f49784e12f45506a274ac6cfb1f2c7fe9ef54364b4dbd91aa7b
}

build() {
  auto-config
  make install DESTDIR=/dst
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
