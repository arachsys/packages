mode autotools

check() {
  url https://tukaani.org/xz/
  match version 5.4.0 'xz-([0-9.]+)\.tar'
}

prepare() {
  unpack https://tukaani.org/xz/xz-5.4.0.tar.xz
  tree b541b80d7dfb087413b4f0260c6bc45b37338c44b50381078b0f9e93a6c6f977
}

post-install() {
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
