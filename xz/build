mode autotools

check() {
  url https://tukaani.org/xz/
  match version 5.2.7 'xz-([0-9.]+)\.tar'
}

prepare() {
  unpack https://tukaani.org/xz/xz-5.2.7.tar.xz
  tree bafa1aaddf0fc31740fcfe453fbd6d8dea9c307614d00cfce92dec1127b74d0b
}

post-install() {
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
