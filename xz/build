mode autotools

check() {
  url https://tukaani.org/xz/
  match version 5.4.2 'xz-([0-9.]+)\.tar'
}

prepare() {
  unpack https://tukaani.org/xz/xz-5.4.2.tar.xz
  tree a085782d207b0664d43f81fcb3dc2f595914d803f2437a1882b322838f5dfcff
}

post-install() {
  rm -f /dst/bin/{lz,xz}{cmp,diff,*grep,less,more} \
    /dst/lib/man/man1/{lz,xz}{cmp,diff,*grep,less,more}.1
}
