check() {
  url https://github.com/madler/zlib/tags
  match version 1.3 'v([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/madler/zlib/releases/download/v1.3/zlib-1.3.tar.gz
  tree a204b71c5e767f5bcf0db2550f4153c15e78eae9ecde32529082807afe16f436
}

build() {
  CC=cc /src/configure --prefix=/dst --includedir='${prefix}/lib/include' \
    --libdir='${prefix}/lib' --shared
  make install mandir=/dst/lib/man pkgconfigdir=/dst/lib/pkgconfig
}
