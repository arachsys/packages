check() {
  url https://api.github.com/repos/madler/zlib/releases
  match version 1.3.2 'zlib-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/madler/zlib/releases/download/v1.3.2/zlib-1.3.2.tar.gz
  tree 7ce1fc6d096d7c0e5e76ebbc7d21fefa9449318a62f71778665296ed80167cb6
}

build() {
  CC=cc LDSHARED='cc -shared -Wl,-soname,libz.so.1' /src/configure \
    --prefix=/dst --includedir='${prefix}/lib/include' \
    --libdir='${prefix}/lib' --shared
  make install mandir=/dst/lib/man pkgconfigdir=/dst/lib/pkgconfig
}
