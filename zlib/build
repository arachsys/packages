check() {
  url https://zlib.net/
  match version 1.2.12 'zlib-([0-9.]+)\.tar'
}

prepare() {
  unpack https://zlib.net/zlib-1.2.12.tar.xz
  apply configure.diff
  tree d5910084f532b246752665515461df66e8e64c3c1d4bb377fb9c59287984f2da
}

build() {
  CC=cc /src/configure --prefix=/dst --includedir='${prefix}/lib/include' \
    --libdir='${prefix}/lib' --shared
  make install mandir=/dst/lib/man pkgconfigdir=/dst/lib/pkgconfig
}
