check() {
  url https://zlib.net/
  match version 1.2.13 'zlib-([0-9.]+)\.tar'
}

prepare() {
  unpack https://zlib.net/zlib-1.2.13.tar.xz
  tree 9b94a4bea18ab99eabc32b8394661eaf4b29d3f37b3c7ef5dd9ab47d0772e958
}

build() {
  CC=cc /src/configure --prefix=/dst --includedir='${prefix}/lib/include' \
    --libdir='${prefix}/lib' --shared
  make install mandir=/dst/lib/man pkgconfigdir=/dst/lib/pkgconfig
}
