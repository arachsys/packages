check() {
  url https://github.com/facebook/zstd/tags
  match version 1.5.4 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/facebook/zstd/releases/download/v1.5.4/zstd-1.5.4.tar.gz
  tree 44cb3463c2b187ce38c29a6e383dd295cd1be791973cf1bd92cd820d875050af
}

build() {
  make lib-mt install DESTDIR=/dst PREFIX= INCLUDEDIR=/lib/include \
    LIBDIR=/lib MAN1DIR=/lib/man/man1
  rm -f /dst/bin/zstd{grep,less} /dst/lib/man/man1/zstd{grep,less}.1
}
