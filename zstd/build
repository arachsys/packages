check() {
  url https://github.com/facebook/zstd/tags
  match version 1.5.5 'tags/v([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/facebook/zstd/releases/download/v1.5.5/zstd-1.5.5.tar.gz
  tree 5f43c07fbfa649179481da2bf0b64075991454cce3f917696d275e0a70440e72
}

build() {
  make lib-mt install DESTDIR=/dst PREFIX= INCLUDEDIR=/lib/include \
    LIBDIR=/lib MAN1DIR=/lib/man/man1
  rm -f /dst/bin/zstd{grep,less} /dst/lib/man/man1/zstd{grep,less}.1
}
