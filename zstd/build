check() {
  url https://github.com/facebook/zstd/releases
  match version 1.5.2 'zstd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/facebook/zstd/releases/download/v1.5.2/zstd-1.5.2.tar.gz
  tree b1e086d5c438a5c9d560fa4b8b212773b569fadf7a785ad96060283732b078bf
}

build() {
  make lib-mt install DESTDIR=/dst PREFIX= INCLUDEDIR=/lib/include \
    LIBDIR=/lib MAN1DIR=/lib/man/man1
  rm -f /dst/bin/zstd{grep,less} /dst/lib/man/man1/zstd{grep,less}.1
}
