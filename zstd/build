check() {
  url https://github.com/facebook/zstd/releases
  match version 1.5.1 'zstd-([0-9.]+)\.tar'
}

prepare() {
  unpack https://github.com/facebook/zstd/releases/download/v1.5.1/zstd-1.5.1.tar.gz
  tree 8c6b3798d503822adf3797ee83ed091f0c449bd83d9498357dc1721fec723409
}

build() {
  make lib-mt install DESTDIR=/dst PREFIX= INCLUDEDIR=/lib/include \
    LIBDIR=/lib MAN1DIR=/lib/man/man1
  rm -f /dst/bin/zstd{grep,less} /dst/lib/man/man1/zstd{grep,less}.1
}
